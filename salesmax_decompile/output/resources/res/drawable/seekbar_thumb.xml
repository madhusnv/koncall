<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <size
                android:height="12dp"
                android:width="12dp"/>
            <solid android:color="#ff3b5998"/>
            <corners android:radius="6dp"/>
