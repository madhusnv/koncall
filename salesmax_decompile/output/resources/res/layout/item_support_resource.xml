<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLeadRoot"
    android:tag="layout/item_support_resource_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="@dimen/grid_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/grid_1"
        android:paddingEnd="@dimen/grid_1">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/thumbnailImage"
            android:tag="binding_1"
            android:layout_width="@dimen/grid_7"
            android:layout_height="@dimen/grid_7"
            android:layout_marginTop="@dimen/grid_1"
            android:scaleType="fitCenter"
            android:layout_marginStart="@dimen/grid_0_5"
            android:layout_marginEnd="@dimen/grid_0_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="@style/TextAppearance.Superfone.Headline5"
            android:id="@+id/tvContactName"
            android:tag="binding_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/thumbnailImage"
            app:layout_constraintTop_toTopOf="@+id/thumbnailImage"
            app:layout_constraintVertical_chainStyle="packed"/>
        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="@style/TextAppearance.Superfone.Headline6"
            android:textColor="?attr/colorOnSurface"
            android:id="@+id/tvContactNumber"
            android:tag="binding_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_0_5"
            app:layout_constraintEnd_toEndOf="@+id/tvContactName"
            app:layout_constraintStart_toStartOf="@+id/tvContactName"
            app:layout_constraintTop_toBottomOf="@+id/tvContactName"/>
        <com.google.android.material.chip.ChipGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_0_5"
            app:chipSpacingVertical="@dimen/grid_0_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvContactNumber"
            app:layout_constraintTop_toBottomOf="@+id/tvContactNumber">
            <com.google.android.material.chip.Chip
                android:textAppearance="@style/TextAppearance.Superfone.Subtitle2"
                android:textColor="?attr/colorOnPrimary"
                android:id="@+id/chipCategory"
                android:tag="binding_4"
                android:paddingTop="@dimen/grid_0_5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginEnd="@dimen/grid_0_5"
                app:chipBackgroundColor="?attr/colorPrimary"
                app:ensureMinTouchTargetSize="false"
                app:iconEndPadding="2dp"
                app:textEndPadding="0dp"
                app:textStartPadding="2dp"/>
            <com.google.android.material.chip.Chip
                android:textAppearance="@style/TextAppearance.Superfone.Subtitle2"
                android:textColor="?attr/colorOnPrimary"
                android:id="@+id/chipSubCategory"
                android:tag="binding_5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginEnd="@dimen/grid_0_5"
                app:chipBackgroundColor="@color/superfone_purple"
                app:ensureMinTouchTargetSize="false"
                app:iconEndPadding="2dp"
                app:textEndPadding="0dp"
                app:textStartPadding="2dp"/>
            <com.google.android.material.chip.Chip
                android:textAppearance="@style/TextAppearance.Superfone.Subtitle2"
                android:textColor="?attr/colorOnPrimary"
                android:id="@+id/chipFormat"
                android:tag="binding_6"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:chipBackgroundColor="@color/superfone_red"
                app:ensureMinTouchTargetSize="false"
                app:iconEndPadding="2dp"
                app:textEndPadding="0dp"
                app:textStartPadding="2dp"/>
        </com.google.android.material.chip.ChipGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
