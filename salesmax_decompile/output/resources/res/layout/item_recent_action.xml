<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_container_ivContactProfilePicInLead"
    android:tag="layout/item_recent_action_0"
    android:background="@null"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_constraintDimensionRatio="H, 1:1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvDate">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_gravity="top|center_horizontal"
        android:id="@+id/ivContactProfilePic"
        android:tag="binding_1"
        android:padding="2dp"
        android:layout_width="@dimen/grid_2"
        android:layout_height="@dimen/grid_2"
        android:scaleType="centerInside"/>
    <com.google.android.material.textview.MaterialTextView
        android:textSize="8sp"
        android:textStyle="bold"
        android:gravity="bottom"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/leadLifecycle"
        android:tag="binding_2"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_1_5"
        android:alpha="0.8"
        android:paddingStart="@dimen/grid_0_5"
        android:paddingEnd="@dimen/grid_0_5"/>
</FrameLayout>
