<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/followups_fragment_0"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragmentToolbar"
        android:background="?attr/colorSurface"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/fragmentBack"
            android:padding="@dimen/grid_1_5"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_arrow"/>
        <HorizontalScrollView
            android:id="@+id/newLeadsSourceTypes"
            android:background="@color/white_80"
            android:scrollbars="none"
            android:clipToPadding="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragmentBack"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/lnaTypeGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_1"
                android:layout_marginEnd="@dimen/grid_1"
                app:selectionRequired="true"
                app:singleLine="true"
                app:singleSelection="true">
                <com.google.android.material.chip.Chip
                    android:textSize="12sp"
                    android:id="@+id/chipProspecting"
                    android:tag="binding_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Superfone.ChipStroke"/>
                <com.google.android.material.chip.Chip
                    android:textSize="12sp"
                    android:id="@+id/chipCallsMissed"
                    android:tag="binding_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/client_calls_missed"
                    style="@style/Widget.Superfone.ChipStroke"/>
                <com.google.android.material.chip.Chip
                    android:textSize="12sp"
                    android:id="@+id/chipTaskDueToday"
                    android:tag="binding_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_category"
                    style="@style/Widget.Superfone.ChipStroke"/>
                <com.google.android.material.chip.Chip
                    android:textSize="12sp"
                    android:id="@+id/chipOpportunity"
                    android:tag="binding_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deal_followups"
                    style="@style/Widget.Superfone.ChipStroke"/>
                <com.google.android.material.chip.Chip
                    android:textSize="12sp"
                    android:id="@+id/chipVideoMeetings"
                    android:tag="binding_5"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/video_meetings"
                    style="@style/Widget.Superfone.ChipStroke"/>
                <com.google.android.material.chip.Chip
                    android:textSize="12sp"
                    android:id="@+id/chipExpiringSoon"
                    android:tag="binding_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expiring_soon"
                    style="@style/Widget.Superfone.ChipStroke"/>
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/leadsSelectionAction"
        android:tag="binding_7"
        android:background="?attr/colorSecondary"
        android:padding="@dimen/grid_0_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentToolbar">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/deselectAll"
            android:tag="binding_8"
            android:padding="@dimen/grid_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/superfone_white"
            app:srcCompat="@drawable/ic_back_arrow"/>
        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="@style/TextAppearance.Superfone.Headline5"
            android:textColor="@color/white"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            android:id="@+id/leadSelectionTitle"
            android:tag="binding_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/leads"
            android:maxLines="1"
            android:layout_weight="1"/>
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center_vertical"
            android:id="@+id/addTagTemplate"
            android:tag="binding_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_tag"
            app:iconTint="?attr/colorOnPrimary"
            style="@style/Superfone.Button.IconOnly"/>
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center_vertical"
            android:id="@+id/sendMultipleTemplate"
            android:tag="binding_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_comment"
            app:iconTint="?attr/colorOnPrimary"
            style="@style/Superfone.Button.IconOnly"/>
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center_vertical"
            android:id="@+id/assigneeProfilePic"
            android:tag="binding_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_user_add"
            app:iconTint="?attr/colorOnPrimary"
            style="@style/Superfone.Button.IconOnly"/>
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center_vertical"
            android:id="@+id/deletePic"
            android:tag="binding_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_delete_engagement"
            app:iconTint="?attr/colorOnPrimary"
            style="@style/Superfone.Button.IconOnly"/>
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center_vertical"
            android:id="@+id/closePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_stop"
            app:iconTint="?attr/colorOnPrimary"
            style="@style/Superfone.Button.IconOnly"/>
    </LinearLayout>
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:animationCache="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toTopOf="@+id/taskCommentTextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leadsSelectionAction"
        app:shimmer_repeat_mode="restart"
        app:shimmer_shape="radial">
        <LinearLayout
            android:orientation="vertical"
            android:tag="binding_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@+id/taskCommentTextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leadsSelectionAction">
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            android:id="@+id/rvFragmentList"
            android:paddingTop="@dimen/grid_1"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newLeadsSourceTypes"
            app:spanCount="1"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <include
        android:id="@+id/contentNoItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/content_no_lna"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_gravity="end|bottom"
        android:id="@+id/fabAutoCall"
        android:tag="binding_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_6"
        android:src="@drawable/ic_auto_dial"
        android:contentDescription="@string/add"
        android:layout_marginStart="@dimen/grid_3"
        android:layout_marginEnd="@dimen/grid_3"
        android:backgroundTint="?attr/colorPrimary"
        app:borderWidth="0dp"
        app:layout_anchorGravity="end|bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="?attr/colorOnPrimary"
        style="?attr/floatingActionButtonSmallStyle"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/taskCommentTextInputLayout"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_2"
        android:layout_marginBottom="@dimen/grid_2"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_marginEnd="@dimen/grid_2"
        android:backgroundTint="?attr/colorPrimary"
        app:boxCornerRadiusBottomEnd="24dp"
        app:boxCornerRadiusBottomStart="24dp"
        app:boxCornerRadiusTopEnd="24dp"
        app:boxCornerRadiusTopStart="24dp"
        app:endIconDrawable="@drawable/ic_send_disabled"
        app:endIconMode="custom"
        app:endIconTint="?attr/colorPrimary"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Superfone.Input.WithoutLine">
        <com.google.android.material.textfield.TextInputEditText
            android:textAppearance="@style/TextAppearance.Superfone.Body1"
            android:textColor="@color/superfone_green"
            android:id="@+id/taskCommentEditText"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type anything you want to be reminded of"
            android:maxLines="2"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            android:paddingStart="@dimen/grid_1_5"/>
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
