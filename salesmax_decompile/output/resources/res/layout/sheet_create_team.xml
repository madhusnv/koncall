<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginCard"
    android:tag="layout/sheet_create_team_0"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHeight_percent="0.6"
    app:shapeAppearance="@style/ShapeAppearance.Superfone.LoginCard"
    style="@style/Superfone.Card">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/grid_2"
                android:layout_marginStart="@dimen/grid_2"
                android:layout_marginEnd="@dimen/grid_2">
                <com.google.android.material.textview.MaterialTextView
                    android:textAppearance="@style/TextAppearance.Superfone.Headline4"
                    android:id="@+id/createNewTeamTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/grid_1_5"
                    android:text="@string/create_team"
                    app:layout_constraintEnd_toStartOf="@+id/createNewTeamClose"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/createNewTeamClose"
                    android:padding="@dimen/grid_1_5"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/grid_5"
                    app:layout_constraintBottom_toBottomOf="@+id/createNewTeamTitle"
                    app:layout_constraintDimensionRatio="H, 1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/createNewTeamTitle"
                    app:srcCompat="@drawable/ic_cross"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:textAppearance="@style/TextAppearance.Superfone.Body1"
                    android:id="@+id/teamName"
                    android:background="@drawable/ic_bottom_border"
                    android:padding="@dimen/grid_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2"
                    android:hint="@string/input_team_name"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    app:layout_constraintTop_toBottomOf="@+id/createNewTeamClose"
                    style="@style/Superfone.Input.WithoutBox"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:textAppearance="@style/TextAppearance.Superfone.Body1"
                    android:id="@+id/teamDescription"
                    android:background="@drawable/ic_bottom_border"
                    android:padding="@dimen/grid_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2"
                    android:hint="@string/input_team_description"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    app:layout_constraintTop_toBottomOf="@+id/teamName"
                    style="@style/Superfone.Input.WithoutBox"/>
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/selfTeamLeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2"
                    android:layout_marginBottom="@dimen/grid_2"
                    android:checked="true"
                    android:text="@string/self_team_leader"
                    android:layout_marginStart="@dimen/grid_2"
                    android:layout_marginEnd="@dimen/grid_2"
                    app:layout_constraintTop_toBottomOf="@+id/teamDescription"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/AssignCollagueTxt"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/grid_0_5"
                    android:layout_marginEnd="@dimen/grid_1"
                    app:endIconMode="custom"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/selfTeamLeader"
                    app:startIconDrawable="0x7f080458"
                    style="@style/Superfone.Input.WithoutLine">
                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:textColor="?attr/colorOnSurface"
                        android:id="@+id/mAutoCompleteCollague"
                        android:background="@drawable/board_selected"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_team_leader"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:completionThreshold="2"
                        android:inputType="textNoSuggestions"
                        android:imeOptions="actionDone"
                        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"/>
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/mACClose"
                    android:visibility="gone"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_search_close"
                    android:paddingEnd="@dimen/grid_2"
                    app:layout_constraintBottom_toBottomOf="@+id/AssignCollagueTxt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/AssignCollagueTxt"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/createTeamActionButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_3"
                    android:text="@string/create_team_action"
                    android:textAllCaps="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/AssignCollagueTxt"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
