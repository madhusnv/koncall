<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/new_leads_fragment_0"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragmentToolbar"
        android:background="?attr/colorSurface"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/fragmentBack"
            android:tag="binding_1"
            android:padding="@dimen/grid_1_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H, 1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_arrow"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchLeadsEditTextLayout"
            android:paddingBottom="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_1"
            android:layout_marginEnd="@dimen/grid_1"
            android:backgroundTint="?attr/colorPrimary"
            app:boxCornerRadiusBottomEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusTopStart="24dp"
            app:endIconDrawable="@drawable/ic_microphone"
            app:endIconMode="custom"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fragmentFilter"
            app:layout_constraintStart_toEndOf="@+id/fragmentBack"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="0x7f080458"
            style="@style/Superfone.Input.WithoutLine">
            <com.google.android.material.textfield.TextInputEditText
                android:textAppearance="@style/TextAppearance.Superfone.Body1"
                android:id="@+id/searchLeadsEditText"
                android:background="@drawable/board_selected"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_by_name"
                android:maxLines="1"
                android:inputType="textNoSuggestions"
                android:imeOptions="actionDone"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="@style/TextAppearance.Superfone.Headline5"
            android:gravity="center"
            android:id="@+id/fragmentTitle"
            android:visibility="gone"
            android:layout_width="369dp"
            android:layout_height="62dp"
            android:text="@string/new_uncontacted_leads"
            android:maxLines="1"
            android:layout_marginStart="@dimen/grid_2"
            android:layout_marginEnd="@dimen/grid_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <FrameLayout
            android:id="@+id/fragmentFilter"
            android:padding="@dimen/grid_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H, 1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/leadsFilter"
                android:tag="binding_2"
                android:padding="@dimen/grid_0_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_filter"/>
            <TextView
                android:textColor="?attr/colorOnPrimary"
                android:gravity="center"
                android:layout_gravity="end|top"
                android:id="@+id/leadsFilter_badge"
                android:background="@drawable/badge_background"
                android:padding="3dp"
                android:visibility="invisible"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="@dimen/grid_0_5"
                android:layout_marginEnd="@dimen/grid_0_5"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/leadsSelectionAction"
        android:tag="binding_3"
        android:background="?attr/colorSecondary"
        android:padding="@dimen/grid_0_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentToolbar">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/deselectAll"
            android:tag="binding_4"
            android:padding="@dimen/grid_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/superfone_white"
            app:srcCompat="@drawable/ic_back_arrow"/>
        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="@style/TextAppearance.Superfone.Headline5"
            android:textColor="@color/white"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            android:id="@+id/leadSelectionTitle"
            android:tag="binding_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/leads"
            android:maxLines="1"
            android:layout_weight="1"/>
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center_vertical"
            android:id="@+id/addTagTemplate"
            android:tag="binding_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_tag"
            app:iconTint="?attr/colorOnPrimary"
            style="@style/Superfone.Button.IconOnly"/>
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center_vertical"
            android:id="@+id/sendMultipleTemplate"
            android:tag="binding_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_comment"
            app:iconTint="?attr/colorOnPrimary"
            style="@style/Superfone.Button.IconOnly"/>
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center_vertical"
            android:id="@+id/assigneeProfilePic"
            android:tag="binding_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_user_add"
            app:iconTint="?attr/colorOnPrimary"
            style="@style/Superfone.Button.IconOnly"/>
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center_vertical"
            android:id="@+id/deletePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_delete_engagement"
            app:iconTint="?attr/colorOnPrimary"
            style="@style/Superfone.Button.IconOnly"/>
        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center_vertical"
            android:id="@+id/closePic"
            android:tag="binding_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_stop"
            app:iconTint="?attr/colorOnPrimary"
            style="@style/Superfone.Button.IconOnly"/>
    </LinearLayout>
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:animationCache="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newLeadsSourceTypes"
        app:shimmer_repeat_mode="restart"
        app:shimmer_shape="radial">
        <LinearLayout
            android:orientation="vertical"
            android:tag="binding_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
            <include layout="@layout/content_shimmer_leads"/>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newLeadsSourceTypes">
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            android:id="@+id/rvFragmentList"
            android:paddingTop="@dimen/grid_1"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newLeadsSourceTypes"
            app:spanCount="1"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <include
        android:id="@+id/contentNoItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newLeadsSourceTypes"
        layout="@layout/content_no_lna"/>
    <include
        android:id="@+id/contentNoItemsFilter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/grid_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newLeadsSourceTypes"
        layout="@layout/content_no_lead_search_filter"/>
    <HorizontalScrollView
        android:id="@+id/newLeadsSourceTypes"
        android:background="@color/white_80"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/grid_1"
        android:paddingEnd="@dimen/grid_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leadsSelectionAction">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/lnaTypeGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_1"
            android:layout_marginEnd="@dimen/grid_1"
            app:selectionRequired="true"
            app:singleLine="true"
            app:singleSelection="true">
            <com.google.android.material.chip.Chip
                android:textSize="12sp"
                android:id="@+id/chipAllNew"
                android:tag="binding_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all"
                style="@style/Widget.Superfone.ChipStroke"/>
            <com.google.android.material.chip.Chip
                android:textSize="12sp"
                android:id="@+id/chipAssignedToday"
                android:tag="binding_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assigned_today"
                style="@style/Widget.Superfone.ChipStroke"/>
            <com.google.android.material.chip.Chip
                android:textSize="12sp"
                android:id="@+id/chipUnassigned"
                android:tag="binding_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unassigned"
                style="@style/Widget.Superfone.ChipStroke"/>
            <com.google.android.material.chip.Chip
                android:textSize="12sp"
                android:id="@+id/chipFacebookSource"
                android:tag="binding_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facebook"
                style="@style/Widget.Superfone.ChipStroke"/>
            <com.google.android.material.chip.Chip
                android:textSize="12sp"
                android:id="@+id/chipIndiamartSource"
                android:tag="binding_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indiamart"
                style="@style/Widget.Superfone.ChipStroke"/>
            <com.google.android.material.chip.Chip
                android:textSize="12sp"
                android:id="@+id/chipWebForm"
                android:tag="binding_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_form"
                style="@style/Widget.Superfone.ChipStroke"/>
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_gravity="end|bottom"
        android:id="@+id/fabAutoCall"
        android:tag="binding_17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_3"
        android:src="@drawable/ic_auto_dial"
        android:contentDescription="@string/add"
        android:backgroundTint="?attr/colorPrimary"
        app:borderWidth="0dp"
        app:layout_anchorGravity="end|bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="?attr/colorOnPrimary"
        style="?attr/floatingActionButtonSmallStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
