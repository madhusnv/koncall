<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/view_progress_card_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_1"
        app:cardBackgroundColor="#2fb8b0"
        app:cardCornerRadius="@dimen/grid_2"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="?attr/colorOnPrimary"
                android:gravity="center"
                android:id="@+id/newData"
                android:background="@drawable/badge_background"
                android:padding="3dp"
                android:visibility="gone"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="@dimen/grid_3"
                android:alpha="0.8"
                android:layout_marginEnd="@dimen/grid_3"
                android:backgroundTint="@color/superfone_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ai.salesmax.view.ColorArcProgressBar
                android:layout_gravity="center_horizontal"
                android:id="@+id/itemProgress"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/grid_1"
                android:layout_marginBottom="@dimen/grid_2"
                app:back_color="@color/white_10"
                app:back_width="@dimen/grid_0_5"
                app:front_color1="@color/superfone_white"
                app:front_color2="@color/superfone_white"
                app:front_color3="@color/superfone_white"
                app:front_width="@dimen/grid_0_5"
                app:is_need_content="false"
                app:is_need_unit="false"
                app:layout_constraintBottom_toTopOf="@+id/itemName"
                app:layout_constraintDimensionRatio="V, 1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintWidth_percent="0.3"
                app:max_value="100"
                app:string_unit="@string/search_superfone"
                app:total_angle="360"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/itemIcon"
                android:layout_width="@dimen/grid_3"
                android:layout_height="@dimen/grid_3"
                app:layout_constraintBottom_toBottomOf="@+id/itemProgress"
                app:layout_constraintEnd_toEndOf="@+id/itemProgress"
                app:layout_constraintStart_toStartOf="@+id/itemProgress"
                app:layout_constraintTop_toTopOf="@+id/itemProgress"
                app:srcCompat="@drawable/ic_tasks"
                app:tint="@color/superfone_white"/>
            <com.google.android.material.textview.MaterialTextView
                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                android:textColor="?attr/colorOnPrimary"
                android:gravity="center"
                android:id="@+id/itemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/grid_2"
                android:text="@string/tasks"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemProgress"/>
            <com.google.android.material.textview.MaterialTextView
                android:textAppearance="@style/TextAppearance.Superfone.Headline4extra"
                android:textColor="?attr/colorOnPrimary"
                android:gravity="center"
                android:id="@+id/itemSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/grid_2"
                android:text="@string/tasks"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemName"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <View
        android:id="@+id/shadowMarginView"
        android:layout_width="0dp"
        android:layout_height="@dimen/grid_1"
        android:layout_marginStart="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        app:layout_constraintEnd_toEndOf="@+id/itemCard"
        app:layout_constraintStart_toStartOf="@+id/itemCard"
        app:layout_constraintTop_toBottomOf="@+id/itemCard"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cardShadowView"
        android:background="#2fb8b0"
        android:layout_width="0dp"
        android:layout_height="@dimen/grid_4"
        android:alpha="0.2"
        android:layout_marginStart="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        app:layout_constraintBottom_toBottomOf="@+id/shadowMarginView"
        app:layout_constraintEnd_toEndOf="@+id/itemCard"
        app:layout_constraintStart_toStartOf="@+id/itemCard"
        app:shapeAppearance="@style/ShapeAppearance.Superfone.SmallComponent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
