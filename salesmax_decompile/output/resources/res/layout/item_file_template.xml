<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/item_file_template_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemLeadRoot"
        android:tag="binding_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:materialThemeOverlay="@style/ThemeOverlay.Superfone.ElevationOverlayDisabled"
        app:strokeWidth="0dp"
        style="?attr/materialCardViewElevatedStyle">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingTop="@dimen/grid_1_5"
            android:paddingBottom="@dimen/grid_1_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/grid_1"
            android:paddingEnd="@dimen/grid_1">
            <FrameLayout
                android:id="@+id/frame_container"
                android:layout_width="@dimen/grid_5"
                android:layout_height="@dimen/grid_5"
                android:layout_marginStart="@dimen/grid_1"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintDimensionRatio="H, 1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivTemplateProfilePic"
                    android:tag="binding_2"
                    android:background="@color/superfone_gray_200"
                    android:padding="@dimen/grid_0_5"
                    android:layout_width="@dimen/grid_5"
                    android:layout_height="@dimen/grid_5"
                    android:scaleType="centerInside"
                    app:layout_constraintDimensionRatio="H, 1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textColor="?attr/colorOnPrimary"
                    android:gravity="center"
                    android:layout_gravity="end|top"
                    android:id="@+id/activityFilter_badge"
                    android:background="@drawable/badge_background"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="@dimen/grid_0_5"
                    android:alpha="0.5"
                    android:layout_marginEnd="@dimen/grid_0_5"/>
            </FrameLayout>
            <com.google.android.material.textview.MaterialTextView
                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                android:id="@+id/tvContactName"
                android:tag="binding_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_1"
                android:layout_marginEnd="@dimen/grid_1"
                app:layout_constraintBottom_toTopOf="@+id/tvContactNumber"
                app:layout_constraintEnd_toStartOf="@+id/leadOwnerName"
                app:layout_constraintStart_toEndOf="@+id/frame_container"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>
            <com.google.android.material.textview.MaterialTextView
                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                android:textColor="?attr/colorOnSurface"
                android:id="@+id/tvContactNumber"
                android:tag="binding_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_0_5"
                android:layout_marginStart="@dimen/grid_1"
                app:layout_constraintEnd_toEndOf="@+id/tvContactName"
                app:layout_constraintStart_toEndOf="@+id/frame_container"
                app:layout_constraintTop_toBottomOf="@+id/tvContactName"/>
            <com.google.android.material.textview.MaterialTextView
                android:textAppearance="@style/TextAppearance.Superfone.Headline6"
                android:textColor="?attr/colorOnSurface"
                android:id="@+id/tvTemplateBody"
                android:tag="binding_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1"
                android:layout_marginBottom="@dimen/grid_0_5"
                android:maxLines="2"
                app:layout_constraintBottom_toTopOf="@+id/actionGroup"
                app:layout_constraintEnd_toStartOf="@+id/ivTemplateImage"
                app:layout_constraintStart_toStartOf="@+id/tvContactName"
                app:layout_constraintTop_toBottomOf="@+id/tvContactNumber"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_gravity="center"
                android:id="@+id/ivTemplateImage"
                android:tag="binding_6"
                android:layout_width="@dimen/grid_8"
                android:layout_height="@dimen/grid_6"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/RoundedSquare"/>
            <com.google.android.material.chip.Chip
                android:textAppearance="@style/TextAppearance.Superfone.Subtitle2"
                android:id="@+id/leadOwnerName"
                android:tag="binding_7"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/grid_1"
                android:layout_marginEnd="@dimen/grid_1"
                app:chipBackgroundColor="?attr/colorSurface"
                app:chipIconSize="@dimen/grid_2"
                app:ensureMinTouchTargetSize="false"
                app:iconEndPadding="2dp"
                app:layout_constraintEnd_toStartOf="@+id/ivTemplateImage"
                app:layout_constraintTop_toTopOf="parent"
                app:textEndPadding="0dp"
                app:textStartPadding="2dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/callTimeBlock"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_0_5"
                android:layout_marginEnd="@dimen/grid_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/leadOwnerName">
                <CheckBox
                    android:id="@+id/itemCheckBox"
                    android:tag="binding_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"/>
            </LinearLayout>
            <HorizontalScrollView
                android:id="@+id/actionGroup"
                android:tag="binding_9"
                android:scrollbars="none"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvContactName"
                app:layout_constraintTop_toBottomOf="@+id/tvTemplateBody">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/grid_1"
                    android:paddingEnd="@dimen/grid_1">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fileWhatsapp"
                        android:tag="binding_10"
                        android:layout_width="@dimen/grid_4"
                        android:layout_height="@dimen/grid_4"
                        app:backgroundTint="@android:color/holo_green_dark"
                        app:icon="@drawable/ic_whatsapp"
                        app:iconTint="?attr/colorOnPrimary"
                        app:layout_constraintEnd_toStartOf="@+id/fileEmail"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/Superfone.Button.IconOnly"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fileEmail"
                        android:tag="binding_11"
                        android:layout_width="@dimen/grid_4"
                        android:layout_height="@dimen/grid_4"
                        android:layout_marginStart="@dimen/grid_4"
                        app:backgroundTint="@android:color/holo_purple"
                        app:icon="@drawable/ic_email"
                        app:iconTint="?attr/colorOnPrimary"
                        app:layout_constraintEnd_toStartOf="@+id/fileSms"
                        app:layout_constraintStart_toEndOf="@+id/fileWhatsapp"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/Superfone.Button.IconOnly"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fileSms"
                        android:tag="binding_12"
                        android:layout_width="@dimen/grid_4"
                        android:layout_height="@dimen/grid_4"
                        android:layout_marginStart="@dimen/grid_4"
                        app:backgroundTint="@android:color/holo_orange_dark"
                        app:icon="@drawable/ic_message_text"
                        app:iconTint="?attr/colorOnPrimary"
                        app:layout_constraintEnd_toStartOf="@+id/fileShare"
                        app:layout_constraintStart_toEndOf="@+id/fileEmail"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/Superfone.Button.IconOnly"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fileShare"
                        android:tag="binding_13"
                        android:visibility="gone"
                        android:layout_width="@dimen/grid_4"
                        android:layout_height="@dimen/grid_4"
                        android:layout_marginStart="@dimen/grid_4"
                        app:backgroundTint="@android:color/holo_orange_dark"
                        app:icon="@drawable/ic_share"
                        app:iconTint="?attr/colorOnPrimary"
                        app:layout_constraintEnd_toStartOf="@+id/fileEdit"
                        app:layout_constraintStart_toEndOf="@+id/fileEmail"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/Superfone.Button.IconOnly"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fileEdit"
                        android:tag="binding_14"
                        android:layout_width="@dimen/grid_4"
                        android:layout_height="@dimen/grid_4"
                        android:layout_marginStart="@dimen/grid_4"
                        app:backgroundTint="@android:color/holo_blue_dark"
                        app:icon="@drawable/ic_edit"
                        app:iconTint="?attr/colorOnPrimary"
                        app:layout_constraintEnd_toStartOf="@+id/fileInfo"
                        app:layout_constraintStart_toEndOf="@+id/fileShare"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/Superfone.Button.IconOnly"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fileInfo"
                        android:tag="binding_15"
                        android:layout_width="@dimen/grid_4"
                        android:layout_height="@dimen/grid_4"
                        android:layout_marginStart="@dimen/grid_4"
                        app:backgroundTint="@android:color/darker_gray"
                        app:icon="@drawable/ic_info"
                        app:iconTint="?attr/colorOnPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/fileEdit"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/Superfone.Button.IconOnly"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
