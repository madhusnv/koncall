<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/add_task_search_location_0"
    android:background="?attr/colorSurface"
    android:paddingBottom="@dimen/grid_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:backgroundTint="@color/superfone_gray_300"
        app:icon="@drawable/ic_back_arrow"
        app:iconTint="@color/superfone_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.Superfone.TextButtonNoPadding"/>
    <com.google.android.material.textview.MaterialTextView
        android:textAppearance="@style/TextAppearance.Superfone.Headline5"
        android:id="@+id/taskSearchLocationTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/search_place"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_marginEnd="@dimen/grid_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:id="@+id/taskLocationSearch"
        android:paddingLeft="@dimen/grid_1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:weightSum="5"
        app:layout_constraintEnd_toEndOf="@+id/taskSearchLocationTitle"
        app:layout_constraintStart_toStartOf="@+id/taskSearchLocationTitle"
        app:layout_constraintTop_toBottomOf="@+id/taskSearchLocationTitle">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/taskLocationSearchField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1"
            android:layout_weight="4.2"
            app:hintEnabled="false"
            style="@style/Widget.Superfone.SearchTwo">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/taskLocationSearchEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search"
                android:maxLines="1"
                android:inputType="textNoSuggestions"
                android:imeOptions="actionSearch"/>
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mCurrentLocation"
            android:padding="@dimen/grid_1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/grid_1"
            android:src="@drawable/icon_current_loc_bg"
            android:layout_weight="0.8"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="vertical"
        android:id="@+id/taskLocationList"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_marginTop="@dimen/grid_1"
        app:hintEnabled="false"
        app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
        app:layout_constraintEnd_toEndOf="@+id/taskSearchLocationTitle"
        app:layout_constraintStart_toStartOf="@+id/taskSearchLocationTitle"
        app:layout_constraintTop_toBottomOf="@+id/taskLocationSearch"
        app:spanCount="1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
