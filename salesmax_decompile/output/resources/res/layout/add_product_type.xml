<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/add_product_type_0"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Superfone.BottomSheetCard">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    app:backgroundTint="@color/superfone_gray_300"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Widget.Superfone.TextButtonNoPadding"/>
                <com.google.android.material.textview.MaterialTextView
                    android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Or Service"
                    android:layout_marginStart="@dimen/grid_1"
                    android:layout_marginEnd="@dimen/grid_1"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonDone"
                    app:layout_constraintEnd_toStartOf="@+id/buttonDelete"
                    app:layout_constraintStart_toEndOf="@+id/buttonCancel"
                    app:layout_constraintTop_toTopOf="@+id/buttonDone"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <com.google.android.material.button.MaterialButton
                    android:textColor="?attr/colorOnPrimary"
                    android:id="@+id/buttonDelete"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    app:backgroundTint="@color/superfone_red"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Widget.Superfone.TextButtonNoPadding"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/fieldOptions"
                    android:tag="binding_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_1"
                    android:layout_marginBottom="@dimen/grid_1"
                    android:layout_marginStart="@dimen/grid_1"
                    android:layout_marginEnd="@dimen/grid_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/buttonDelete"
                    app:strokeColor="@color/superfone_purple_10"
                    app:strokeWidth="@dimen/grid_0_5">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_1">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/productNameLayout"
                            android:background="@drawable/ic_bottom_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1"
                            android:hint="Name of the product/service"
                            android:layout_marginStart="@dimen/grid_0_5"
                            app:hintAnimationEnabled="true"
                            app:hintEnabled="true"
                            style="@style/Superfone.Input.WithoutLine">
                            <com.google.android.material.textfield.TextInputEditText
                                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                                android:textStyle="bold"
                                android:id="@+id/productName"
                                android:tag="binding_2"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:inputType="textNoSuggestions"
                                android:imeOptions="actionNext"
                                android:paddingStart="12dp"
                                android:paddingEnd="0dp"
                                style="@style/Superfone.Input.WithoutBox"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/productDescriptionLayout"
                            android:background="@drawable/ic_bottom_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1"
                            android:hint="Describe the product/service"
                            android:layout_marginStart="@dimen/grid_0_5"
                            app:hintAnimationEnabled="true"
                            app:hintEnabled="true"
                            style="@style/Superfone.Input.WithoutLine">
                            <com.google.android.material.textfield.TextInputEditText
                                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                                android:textStyle="bold"
                                android:id="@+id/productDescription"
                                android:tag="binding_3"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:inputType="textNoSuggestions"
                                android:imeOptions="actionNext"
                                android:paddingStart="12dp"
                                android:paddingEnd="0dp"
                                style="@style/Superfone.Input.WithoutBox"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/productTypeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Type"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            app:boxBackgroundColor="?attr/colorSurface"
                            app:boxCornerRadiusBottomEnd="20dp"
                            app:boxCornerRadiusBottomStart="20dp"
                            app:boxCornerRadiusTopEnd="20dp"
                            app:boxCornerRadiusTopStart="20dp"
                            app:boxStrokeColor="@color/design_box_stroke_color"
                            app:boxStrokeWidth="0.5dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:endIconDrawable="@drawable/ic_bottom_arrow"
                            app:endIconMode="dropdown_menu"
                            app:endIconTint="@color/superfone_gray"
                            style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
                            <AutoCompleteTextView
                                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                                android:textColor="?attr/colorOnSurface"
                                android:id="@+id/productTypeSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/measuredInLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Measured In"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            app:boxBackgroundColor="?attr/colorSurface"
                            app:boxCornerRadiusBottomEnd="20dp"
                            app:boxCornerRadiusBottomStart="20dp"
                            app:boxCornerRadiusTopEnd="20dp"
                            app:boxCornerRadiusTopStart="20dp"
                            app:boxStrokeColor="@color/design_box_stroke_color"
                            app:boxStrokeWidth="0.5dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:endIconDrawable="@drawable/ic_bottom_arrow"
                            app:endIconMode="dropdown_menu"
                            app:endIconTint="@color/superfone_gray"
                            style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
                            <AutoCompleteTextView
                                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                                android:textColor="?attr/colorOnSurface"
                                android:id="@+id/measuredInSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1">
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/pricePerUnitLayout"
                                android:background="@drawable/ic_bottom_border"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/grid_1"
                                android:hint="Price"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/grid_0_5"
                                app:hintAnimationEnabled="true"
                                app:hintEnabled="true"
                                style="@style/Superfone.Input.WithoutLine">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                                    android:textStyle="bold"
                                    android:id="@+id/pricePerUnit"
                                    android:tag="binding_4"
                                    android:background="@android:color/transparent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:inputType="textNoSuggestions"
                                    android:imeOptions="actionNext"
                                    android:paddingStart="12dp"
                                    android:paddingEnd="0dp"
                                    style="@style/Superfone.Input.WithoutBox"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/priceCurrencyLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/grid_1"
                                android:hint="Currency"
                                android:layout_weight="1"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                app:boxBackgroundColor="?attr/colorSurface"
                                app:boxCornerRadiusBottomEnd="20dp"
                                app:boxCornerRadiusBottomStart="20dp"
                                app:boxCornerRadiusTopEnd="20dp"
                                app:boxCornerRadiusTopStart="20dp"
                                app:boxStrokeColor="@color/design_box_stroke_color"
                                app:boxStrokeWidth="0.5dp"
                                app:boxStrokeWidthFocused="0dp"
                                app:endIconDrawable="@drawable/ic_bottom_arrow"
                                app:endIconMode="dropdown_menu"
                                app:endIconTint="@color/superfone_gray"
                                style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
                                <AutoCompleteTextView
                                    android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                                    android:textColor="?attr/colorOnSurface"
                                    android:id="@+id/priceCurrencySpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/hsCodeLayout"
                            android:background="@drawable/ic_bottom_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1"
                            android:hint="HS Code"
                            android:layout_marginStart="@dimen/grid_0_5"
                            app:hintAnimationEnabled="true"
                            app:hintEnabled="true"
                            style="@style/Superfone.Input.WithoutLine">
                            <com.google.android.material.textfield.TextInputEditText
                                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                                android:textStyle="bold"
                                android:id="@+id/hsCode"
                                android:tag="binding_5"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:inputType="textNoSuggestions"
                                android:imeOptions="actionNext"
                                android:paddingStart="12dp"
                                android:paddingEnd="0dp"
                                style="@style/Superfone.Input.WithoutBox"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/linkedProductLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select the linked product if any"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            app:boxBackgroundColor="?attr/colorSurface"
                            app:boxCornerRadiusBottomEnd="20dp"
                            app:boxCornerRadiusBottomStart="20dp"
                            app:boxCornerRadiusTopEnd="20dp"
                            app:boxCornerRadiusTopStart="20dp"
                            app:boxStrokeColor="@color/design_box_stroke_color"
                            app:boxStrokeWidth="0.5dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:endIconDrawable="@drawable/ic_bottom_arrow"
                            app:endIconMode="dropdown_menu"
                            app:endIconTint="@color/superfone_gray"
                            style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
                            <AutoCompleteTextView
                                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                                android:textColor="?attr/colorOnSurface"
                                android:id="@+id/linkedProduct"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:id="@+id/notesActionButtons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/taskFileList">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/taskAttachment"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/grid_4"
                                app:icon="@drawable/ic_add_task_attachment"
                                style="@style/Superfone.Button.IconOnly.Transparent"/>
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/taskPicture"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/grid_4"
                                app:icon="@drawable/ic_camera"
                                style="@style/Superfone.Button.IconOnly.Transparent"/>
                        </LinearLayout>
                        <com.google.android.material.button.MaterialButton
                            android:textColor="?attr/colorOnPrimary"
                            android:id="@+id/buttonAddOption"
                            android:padding="@dimen/grid_0_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Product/Service"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
