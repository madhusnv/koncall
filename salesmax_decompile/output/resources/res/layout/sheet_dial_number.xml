<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/sheet_dial_number_0"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <com.google.android.material.card.MaterialCardView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Superfone.LoginCard"
        app:strokeWidth="0dp"
        style="?attr/materialCardViewElevatedStyle">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:tag="binding_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/grid_2">
            <com.google.android.material.textview.MaterialTextView
                android:textAppearance="@style/TextAppearance.Superfone.Headline4"
                android:id="@+id/tvUserStatusTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1_5"
                android:text="@string/dial_heading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userStatusClose"
                android:padding="@dimen/grid_1_5"
                android:layout_width="0dp"
                android:layout_height="@dimen/grid_5"
                app:layout_constraintBottom_toBottomOf="@+id/tvUserStatusTitle"
                app:layout_constraintDimensionRatio="H, 1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvUserStatusTitle"
                app:srcCompat="@drawable/ic_cross"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dialerExplanation"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_1"
                android:layout_marginEnd="@dimen/grid_1"
                android:backgroundTint="@color/superfone_purple_10"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="1dp"
                app:layout_constraintTop_toBottomOf="@+id/userStatusClose">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:paddingTop="@dimen/grid_1"
                    android:paddingBottom="@dimen/grid_0_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <com.google.android.material.textview.MaterialTextView
                        android:textAppearance="@style/TextAppearance.Superfone.Headline6"
                        android:id="@+id/dialerExplanationText"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/dialer_explanation"
                        android:layout_marginStart="@dimen/grid_1"
                        android:layout_marginEnd="@dimen/grid_2"
                        app:layout_constraintEnd_toStartOf="@+id/viewedDialerExplanationButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"/>
                    <com.google.android.material.button.MaterialButton
                        android:textStyle="bold"
                        android:textColor="@color/superfone_blue"
                        android:id="@+id/viewedDialerExplanationButton"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/grid_4"
                        android:text="@string/acknowledge_info"
                        android:layout_weight="1"
                        app:iconTint="?attr/colorOnPrimary"
                        app:layout_constraintBottom_toBottomOf="@+id/dialerExplanationText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/dialerExplanationText"
                        style="@style/Superfone.Button.IconOnly.Transparent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/singIn_inputViewGroup"
                android:background="@drawable/ic_bottom_border"
                android:paddingTop="@dimen/grid_1"
                android:paddingBottom="@dimen/grid_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dialerExplanation">
                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_countryPreference="IN,US"
                    app:ccp_defaultNameCode="IN"
                    app:ccp_rememberLastSelection="true"
                    app:ccp_showNameCode="false"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:textAppearance="@style/TextAppearance.Superfone.Body1"
                    android:id="@+id/phoneNumber"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/grid_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_phone"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions|number"
                    android:imeOptions="actionDone"
                    android:layout_marginStart="@dimen/grid_1"
                    style="@style/Superfone.Input.WithoutBox"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputEditText
                android:textAppearance="@style/TextAppearance.Superfone.Body1"
                android:id="@+id/dialName"
                android:background="@drawable/ic_bottom_border"
                android:padding="@dimen/grid_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_2"
                android:hint="@string/input_name"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:layout_marginStart="@dimen/grid_1"
                app:layout_constraintTop_toBottomOf="@+id/singIn_inputViewGroup"
                style="@style/Superfone.Input.WithoutBox"/>
            <include
                android:id="@+id/existingLead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_2"
                app:layout_constraintTop_toBottomOf="@+id/dialName"
                layout="@layout/item_lead"/>
            <com.google.android.material.textview.MaterialTextView
                android:textAppearance="@style/TextAppearance.Superfone.Body1"
                android:id="@+id/alreadyExists"
                android:background="@drawable/ic_bottom_border"
                android:padding="@dimen/grid_1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_2"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:layout_marginStart="@dimen/grid_1"
                app:layout_constraintTop_toBottomOf="@+id/existingLead"
                style="@style/Superfone.Input.WithoutBox"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cloudCallButton"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_3"
                android:text="Cloud"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/grid_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/singInActionButton"
                app:layout_constraintTop_toBottomOf="@+id/alreadyExists"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/singInActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_3"
                android:text="Sim1"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/grid_2"
                android:backgroundTint="@color/superfone_gray"
                app:layout_constraintEnd_toStartOf="@+id/cloudCallButton"
                app:layout_constraintStart_toEndOf="@+id/singInActionButton2"
                app:layout_constraintTop_toBottomOf="@+id/alreadyExists"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/singInActionButton2"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_3"
                android:text="Sim2"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/grid_2"
                android:backgroundTint="@color/superfone_gray"
                app:layout_constraintEnd_toStartOf="@+id/singInActionButton"
                app:layout_constraintStart_toEndOf="@+id/newLeadWhatsappButton"
                app:layout_constraintTop_toBottomOf="@+id/alreadyExists"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/newLeadWhatsappButton"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_3"
                android:text="WA"
                android:backgroundTint="@color/superfone_green"
                app:icon="@drawable/ic_whatsapp"
                app:layout_constraintEnd_toStartOf="@+id/singInActionButton2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alreadyExists"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
