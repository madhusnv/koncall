<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/item_file_template_to_send_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/grid_0_5">
    <com.google.android.material.textview.MaterialTextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/superfone_black"
        android:autoLink="web"
        android:id="@+id/wabaTemplateName"
        android:tag="binding_1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="@dimen/grid_0_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_0_5"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/itemLeadRoot"
        android:tag="binding_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_1_5"
        android:layout_marginStart="@dimen/grid_5"
        android:layout_marginEnd="@dimen/grid_5"
        app:cardBackgroundColor="#d9fdd3"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wabaTemplateName"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.9">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layoutMessageWithImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ivFileView"
                android:tag="binding_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="@dimen/grid_1_5"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:materialThemeOverlay="@style/ThemeOverlay.Superfone.ElevationOverlayDisabled"
                app:strokeColor="@color/backgroundTasks"
                app:strokeWidth="0.5dp"
                style="?attr/materialCardViewElevatedStyle">
                <LinearLayout
                    android:orientation="vertical"
                    android:tag="binding_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/ivFileDetail"
                        android:tag="binding_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/ivFileTypeIcon"
                            android:tag="binding_6"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/grid_4"
                            android:layout_marginTop="@dimen/grid_1_5"
                            android:layout_marginBottom="@dimen/grid_1_5"
                            android:minWidth="@dimen/grid_4"
                            app:cardBackgroundColor="?attr/colorSurface"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp"
                            app:materialThemeOverlay="@style/ThemeOverlay.Superfone.ElevationOverlayDisabled"
                            app:strokeWidth="0dp"
                            style="?attr/materialCardViewElevatedStyle">
                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_gravity="center"
                                android:id="@+id/ivFileTypeIconDrawable"
                                android:tag="binding_7"
                                android:layout_width="@dimen/grid_3"
                                android:layout_height="@dimen/grid_3"
                                android:src="@drawable/ic_file_open"
                                android:scaleType="centerInside"
                                android:adjustViewBounds="true"
                                android:tint="?attr/colorPrimary"
                                app:contentPaddingBottom="0dp"
                                app:shapeAppearanceOverlay="@style/RoundedSquare"/>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="@style/TextAppearance.Superfone.Body3"
                            android:ellipsize="end"
                            android:layout_gravity="center"
                            android:id="@+id/ivFileNameText"
                            android:tag="binding_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/grid_1"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_gravity="center"
                android:id="@+id/ivContactProfilePic"
                android:tag="binding_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/grid_15"
                app:shapeAppearanceOverlay="@style/RoundedSquare"/>
            <com.google.android.material.textview.MaterialTextView
                android:textSize="12sp"
                android:textColor="@color/superfone_black"
                android:ellipsize="end"
                android:autoLink="web"
                android:id="@+id/textMessage"
                android:tag="binding_10"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="@dimen/grid_0_5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/grid_1"
                android:maxLines="5"
                android:layout_weight="1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendMessageActionButton"
                android:tag="binding_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_2"
                android:text="Send This Template"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/grid_3"
                android:layout_marginEnd="@dimen/grid_3"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:background="@drawable/ic_bottom_border"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/grid_1"
        android:layout_marginBottom="@dimen/grid_1"
        app:layout_constraintTop_toBottomOf="@+id/itemLeadRoot"/>
</androidx.constraintlayout.widget.ConstraintLayout>
