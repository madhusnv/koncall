<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/sheet_video_meeting_outcome_0"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Superfone.BottomSheetCard">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/grid_1">
            <com.google.android.material.textview.MaterialTextView
                android:textAppearance="@style/TextAppearance.Superfone.Headline6"
                android:textColor="?attr/colorOnSurface"
                android:id="@+id/outcomeBlockText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_2"
                android:text="How was the call?"
                android:layout_marginStart="@dimen/grid_1"
                android:layout_marginEnd="@dimen/grid_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:gravity="center"
                android:id="@+id/outcomeBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:checkedButton="@+id/btnDone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/outcomeBlockText"
                app:selectionRequired="false"
                app:singleSelection="true">
                <Button
                    android:textSize="9sp"
                    android:id="@+id/btnDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="Done Successfully"
                    style="@style/Widget.Material3.Button.TextButton"/>
                <Button
                    android:textSize="9sp"
                    android:id="@+id/btnCancelled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="Cancelled"
                    style="@style/Widget.Material3.Button.TextButton"/>
                <Button
                    android:textSize="9sp"
                    android:id="@+id/btnDintJoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="Didn&apos;t Join"
                    style="@style/Widget.Material3.Button.TextButton"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/taskBasicDescriptionLayout"
                android:background="@color/superfone_grey_100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1_5"
                android:hint="@string/description"
                app:endIconDrawable="@drawable/ic_microphone"
                app:endIconMode="custom"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/outcomeBlock"
                style="@style/Superfone.Input.WithoutLine">
                <com.google.android.material.textfield.TextInputEditText
                    android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                    android:scrollbarStyle="insideInset"
                    android:textStyle="bold"
                    android:id="@+id/taskBasicDescription"
                    android:tag="binding_1"
                    android:background="@android:color/transparent"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/grid_8"
                    android:singleLine="false"
                    android:inputType="textMultiLine"
                    android:imeOptions="actionDone"
                    android:overScrollMode="always"
                    style="@style/Superfone.Input.WithoutLine"/>
                <requestFocus/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGetMeetingLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_3"
                android:text="Save Outcome"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/grid_2"
                android:layout_marginEnd="@dimen/grid_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/taskBasicDescriptionLayout"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
