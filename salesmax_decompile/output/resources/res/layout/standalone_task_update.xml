<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/standalone_task_update_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/leadDetailsProfilePic"
                android:tag="binding_1"
                android:background="@color/superfone_gray_200"
                android:padding="@dimen/grid_0_5"
                android:layout_width="@dimen/grid_7"
                android:layout_height="@dimen/grid_7"
                android:layout_marginTop="@dimen/grid_1_5"
                android:scaleType="centerInside"
                android:layout_marginStart="@dimen/grid_1"
                android:elevation="@dimen/grid_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Superfone.RoundedImageView"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/contentCallDataParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_5"
                app:layout_constraintTop_toTopOf="@+id/leadDetailsProfilePic"
                style="@style/Superfone.BottomSheetCard">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/leadCallReminder"
                        android:padding="@dimen/grid_1_5"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_constraintDimensionRatio="H, 1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_time"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/leadDetailsClose"
                        android:padding="@dimen/grid_1_5"
                        android:layout_width="0dp"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_constraintDimensionRatio="H, 1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_cross"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                        android:gravity="center"
                        android:id="@+id/leadDetailsName"
                        android:tag="binding_2"
                        android:paddingTop="@dimen/grid_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_4"
                        android:layout_marginStart="@dimen/grid_1_5"
                        android:layout_marginEnd="@dimen/grid_1_5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/editContact"
                        android:layout_width="32dp"
                        android:layout_height="?attr/actionBarSize"
                        android:paddingStart="@dimen/grid_1"
                        app:layout_constraintDimensionRatio="H, 1:1"
                        app:layout_constraintStart_toEndOf="@+id/leadDetailsName"
                        app:layout_constraintTop_toTopOf="@+id/leadDetailsName"
                        app:srcCompat="@drawable/ic_edit"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:textAppearance="@style/TextAppearance.Superfone.Body3"
                        android:textColor="?attr/colorOnSurface"
                        android:gravity="center"
                        android:id="@+id/leadDetailsNumber"
                        android:tag="binding_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_0_5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/leadDetailsName"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:orientation="horizontal"
                        android:id="@+id/rvUserTags"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_1"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/leadDetailsNumber"
                        app:spanCount="1"/>
                    <View
                        android:id="@+id/leadDetailsBorder1"
                        android:background="@drawable/ic_bottom_border"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/grid_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rvUserTags"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                        android:gravity="center_vertical"
                        android:id="@+id/tvCallOutComeTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_1_5"
                        android:text="@string/call_outcome"
                        android:layout_marginEnd="@dimen/grid_6"
                        app:layout_constraintEnd_toStartOf="@+id/tvCallOutcomeDate"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/leadDetailsBorder1"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintWidth_percent="0.5"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:textAppearance="@style/TextAppearance.Superfone.Body4"
                        android:textColor="?attr/colorOnSurface"
                        android:gravity="center"
                        android:id="@+id/tvCallOutcomeDate"
                        android:tag="binding_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_1_5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/leadDetailsBorder1"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:textAppearance="@style/TextAppearance.Superfone.Body4"
                        android:textColor="?attr/colorOnSurface"
                        android:gravity="center_vertical"
                        android:id="@+id/tvCallOutcomeDuration"
                        android:tag="binding_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_0_5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCallOutComeTitle"/>
                    <com.google.android.material.button.MaterialButton
                        android:textAppearance="@style/TextAppearance.Superfone.Body4"
                        android:textColor="?attr/colorPrimary"
                        android:gravity="center"
                        android:id="@+id/tvCallOutcomeDateEdit"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/grid_3"
                        android:minWidth="@dimen/grid_5"
                        android:text="@string/edit"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:paddingStart="@dimen/grid_1"
                        android:paddingEnd="@dimen/grid_1"
                        app:layout_constraintBottom_toBottomOf="@+id/tvCallOutcomeDuration"
                        app:layout_constraintStart_toEndOf="@+id/tvCallOutcomeDuration"
                        app:layout_constraintTop_toTopOf="@+id/tvCallOutcomeDuration"
                        style="@style/Widget.Material3.Button.TextButton"/>
                    <View
                        android:id="@+id/leadDetailsBorder2"
                        android:background="@drawable/ic_bottom_border"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/grid_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCallOutcomeDuration"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:textAppearance="@style/TextAppearance.Superfone.Headline6"
                        android:textColor="?attr/colorOnSurface"
                        android:id="@+id/tvHeadingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_1"
                        android:text="You have following task open on this lead. Complete the task or update it. You can also set up followup or do nothing, we will suggest followup again."
                        android:layout_marginStart="@dimen/grid_1"
                        android:layout_marginEnd="@dimen/grid_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/leadDetailsBorder2"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:id="@+id/rvOpenTaskList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_1"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvHeadingText"
                        app:spanCount="1"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:orientation="horizontal"
                        android:id="@+id/rvCurrentTaskType"
                        android:visibility="visible"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rvOpenTaskList"
                        app:spanCount="1"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/callOutcomeWhenNoTask"
                        android:tag="binding_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/rvCurrentTaskType">
                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/taskCompletionTypeOptions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:checkedButton="@+id/taskCompletedInSuccess"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:selectionRequired="true"
                            app:singleSelection="true">
                            <Button
                                android:id="@+id/taskCompletedInSuccess"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Success"
                                app:icon="@drawable/ic_thumb_up"
                                app:iconTint="@color/superfone_green"
                                style="@style/Widget.Material3.Button.OutlinedButton"/>
                            <Button
                                android:id="@+id/taskCompletedInFailure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Failure"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                app:icon="@drawable/ic_thumb_down"
                                app:iconTint="@color/superfone_red"
                                style="@style/Widget.Material3.Button.OutlinedButton"/>
                            <Button
                                android:id="@+id/taskUpdated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Follow-up"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                app:icon="@drawable/ic_updates"
                                app:iconTint="@color/superfone_blue"
                                style="@style/Widget.Material3.Button.OutlinedButton"/>
                        </com.google.android.material.button.MaterialButtonToggleGroup>
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="@style/TextAppearance.Superfone.Headline6"
                            android:textColor="@color/superfone_green"
                            android:id="@+id/tvTaskCompletionImpact"
                            android:tag="binding_7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1"
                            android:text="Congratulations!!! Successful completion of this task will take deal to next step"
                            android:layout_marginStart="@dimen/grid_1"
                            android:layout_marginEnd="@dimen/grid_1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/taskCompletionTypeOptions"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="@style/TextAppearance.Superfone.Headline6"
                            android:textColor="@color/superfone_green"
                            android:id="@+id/tvTaskCompletionImpactDealWon"
                            android:tag="binding_8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1"
                            android:text="Congratulations!! Looks like you are winning a deal"
                            android:layout_marginStart="@dimen/grid_1"
                            android:layout_marginEnd="@dimen/grid_1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvTaskCompletionImpact"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="@style/TextAppearance.Superfone.Headline6"
                            android:textColor="@color/superfone_red"
                            android:id="@+id/tvTaskCompletionImpactDealLoss"
                            android:tag="binding_9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1"
                            android:text="This will result in loss of open deal on this lead"
                            android:layout_marginStart="@dimen/grid_1"
                            android:layout_marginEnd="@dimen/grid_1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvTaskCompletionImpactDealWon"/>
                        <include
                            android:id="@+id/custom_form"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvTaskCompletionImpactDealLoss"
                            layout="@layout/content_custom_form"/>
                        <androidx.core.widget.NestedScrollView
                            android:id="@+id/scrollTranscript"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fillViewport="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/custom_form"
                            app:layout_constraintVertical_chainStyle="packed">
                            <com.google.android.material.textview.MaterialTextView
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:textColor="@color/superfone_blue"
                                android:gravity="start|top"
                                android:id="@+id/tvTranscript"
                                android:padding="@dimen/grid_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Start speakingâ€¦"
                                android:minLines="3"
                                android:animateLayoutChanges="true"/>
                        </androidx.core.widget.NestedScrollView>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/taskCompleteHint"
                            android:background="@color/superfone_grey_100"
                            android:paddingTop="@dimen/grid_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1"
                            android:paddingStart="8dp"
                            android:paddingEnd="0dp"
                            app:endIconDrawable="@drawable/ic_microphone"
                            app:endIconMode="custom"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/scrollTranscript"
                            style="@style/Superfone.Input.WithoutBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                                android:scrollbarStyle="insideInset"
                                android:textStyle="bold"
                                android:gravity="top"
                                android:id="@+id/taskComplete"
                                android:tag="binding_10"
                                android:padding="@dimen/grid_1"
                                android:scrollbars="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="@dimen/grid_8"
                                android:hint="@string/description"
                                android:singleLine="false"
                                android:inputType="textMultiLine"
                                android:imeOptions="actionDone"
                                android:overScrollMode="always"
                                android:paddingStart="0dp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:orientation="horizontal"
                            android:id="@+id/taskFileList"
                            android:tag="binding_11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_0_5"
                            app:icon="@drawable/ic_add_task_call"
                            app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/taskCompleteHint"
                            app:spanCount="1"/>
                        <View
                            android:id="@+id/notesBorder1"
                            android:background="@drawable/ic_bottom_border"
                            android:layout_width="0dp"
                            android:layout_height="0.5dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/taskFileList"/>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:id="@+id/taskActionButtons"
                            android:visibility="visible"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/taskFileList">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/taskAttachment"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/grid_4"
                                app:icon="@drawable/ic_add_task_attachment"
                                style="@style/Superfone.Button.IconOnly.Transparent"/>
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/taskPicture"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/grid_4"
                                app:icon="@drawable/ic_camera"
                                style="@style/Superfone.Button.IconOnly.Transparent"/>
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/scanDoc"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/grid_4"
                                app:icon="@drawable/ic_scan"
                                style="@style/Superfone.Button.IconOnly.Transparent"/>
                        </LinearLayout>
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                            android:gravity="center_vertical"
                            android:id="@+id/tvCallOutComeNextTitle"
                            android:tag="binding_12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1_5"
                            android:text="@string/what_next_step"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/taskActionButtons"
                            app:layout_constraintVertical_chainStyle="packed"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                            android:textColor="@color/superfone_blue"
                            android:gravity="center_vertical"
                            android:id="@+id/tvCallOutComeNextAssignee"
                            android:tag="binding_13"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Tasker : You"
                            app:layout_constraintEnd_toStartOf="@+id/nextStepTaskerDelete"
                            app:layout_constraintTop_toTopOf="@+id/tvCallOutComeNextTitle"
                            app:layout_constraintVertical_chainStyle="packed"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/nextStepTaskerDelete"
                            android:tag="binding_14"
                            android:layout_width="@dimen/grid_4"
                            android:layout_height="@dimen/grid_4"
                            app:icon="@drawable/ic_cross"
                            app:layout_constraintBottom_toBottomOf="@+id/tvCallOutComeNextAssignee"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvCallOutComeNextAssignee"
                            style="@style/Superfone.Button.IconOnly"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:orientation="horizontal"
                            android:id="@+id/rvNextStepTaskType"
                            android:tag="binding_15"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvCallOutComeNextTitle"
                            app:spanCount="1"/>
                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:gravity="center"
                            android:id="@+id/toggleGroupDueDateSelection"
                            android:tag="binding_16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rvNextStepTaskType"
                            app:selectionRequired="true"
                            app:singleSelection="true">
                            <Button
                                android:textSize="9sp"
                                android:id="@+id/btnLaterToday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:text="Today"
                                style="@style/Widget.Material3.Button.TextButton"/>
                            <Button
                                android:textSize="9sp"
                                android:id="@+id/btnTomorrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:text="Tomorrow"
                                style="@style/Widget.Material3.Button.TextButton"/>
                            <Button
                                android:textSize="9sp"
                                android:id="@+id/btnLaterThisWeek"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:text="This Week"
                                style="@style/Widget.Material3.Button.TextButton"/>
                            <Button
                                android:textSize="9sp"
                                android:id="@+id/btnNextWeek"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:text="Next Week"
                                style="@style/Widget.Material3.Button.TextButton"/>
                            <Button
                                android:textSize="9sp"
                                android:id="@+id/btnCustomDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:text="Select"
                                style="@style/Widget.Material3.Button.TextButton"/>
                        </com.google.android.material.button.MaterialButtonToggleGroup>
                        <include
                            android:id="@+id/custom_form_task_input"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/toggleGroupDueDateSelection"
                            layout="@layout/content_custom_form"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/sendMessageLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/custom_form_task_input"
                            app:layout_constraintVertical_chainStyle="packed">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/leadWhatsapp"
                                android:layout_width="21dp"
                                android:layout_height="@dimen/grid_4"
