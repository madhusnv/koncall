                                android:id="@+id/callTomorrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/grid_0_5"
                                android:text="Tomorrow"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/grid_1"
                                app:chipBackgroundColor="?attr/colorPrimary"
                                app:chipIconSize="@dimen/grid_3"
                                app:chipStartPadding="@dimen/grid_0_5"
                                app:ensureMinTouchTargetSize="true"
                                app:iconEndPadding="2dp"
                                app:iconStartPadding="2dp"
                                app:textEndPadding="@dimen/grid_0_5"
                                app:textStartPadding="@dimen/grid_0_5"/>
                            <com.google.android.material.chip.Chip
                                android:textAppearance="@style/TextAppearance.Superfone.Subtitle1"
                                android:textColor="?attr/colorOnPrimary"
                                android:id="@+id/callLaterWeek"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/grid_0_5"
                                android:text="in 2 Days"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/grid_1"
                                app:chipBackgroundColor="?attr/colorPrimary"
                                app:chipIconSize="@dimen/grid_3"
                                app:ensureMinTouchTargetSize="true"
                                app:iconStartPadding="@dimen/grid_0_5"
                                app:textEndPadding="@dimen/grid_0_5"
                                app:textStartPadding="@dimen/grid_0_5"/>
                            <com.google.android.material.chip.Chip
                                android:textAppearance="@style/TextAppearance.Superfone.Subtitle1"
                                android:textColor="?attr/colorOnPrimary"
                                android:id="@+id/callNextWeek"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/grid_0_5"
                                android:text="Next Week"
                                android:layout_weight="1"
                                app:chipBackgroundColor="?attr/colorPrimary"
                                app:chipIconSize="@dimen/grid_3"
                                app:chipIconTint="@color/superfone_blue"
                                app:chipStartPadding="@dimen/grid_0_5"
                                app:ensureMinTouchTargetSize="true"
                                app:iconEndPadding="2dp"
                                app:iconStartPadding="2dp"
                                app:textEndPadding="0dp"
                                app:textStartPadding="0dp"/>
                            <com.google.android.material.chip.Chip
                                android:textAppearance="@style/TextAppearance.Superfone.Subtitle1"
                                android:textColor="?attr/colorOnPrimary"
                                android:id="@+id/callSelectDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/grid_0_5"
                                android:text="Select"
                                android:layout_weight="1"
                                app:chipBackgroundColor="?attr/colorPrimary"
                                app:chipIconSize="@dimen/grid_3"
                                app:chipIconTint="@color/superfone_blue"
                                app:chipStartPadding="@dimen/grid_0_5"
                                app:ensureMinTouchTargetSize="true"
                                app:iconEndPadding="2dp"
                                app:iconStartPadding="2dp"
                                app:textEndPadding="0dp"
                                app:textStartPadding="0dp"/>
                            <com.google.android.material.chip.Chip
                                android:textAppearance="@style/TextAppearance.Superfone.Subtitle1"
                                android:textColor="?attr/colorOnPrimary"
                                android:id="@+id/callGoBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/grid_0_5"
                                android:text="Back"
                                android:layout_weight="1"
                                app:chipBackgroundColor="@color/superfone_red"
                                app:chipIconSize="@dimen/grid_3"
                                app:chipIconTint="@color/superfone_blue"
                                app:chipStartPadding="@dimen/grid_0_5"
                                app:ensureMinTouchTargetSize="true"
                                app:iconEndPadding="2dp"
                                app:iconStartPadding="2dp"
                                app:textEndPadding="0dp"
                                app:textStartPadding="0dp"/>
                        </com.google.android.material.chip.ChipGroup>
                    </LinearLayout>
