                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tvRedoStreamingStt"
                            android:padding="@dimen/grid_0_5"
                            android:visibility="gone"
                            android:layout_width="@dimen/grid_4"
                            android:layout_height="@dimen/grid_4"
                            app:icon="@drawable/ic_undo"
                            app:layout_constraintBottom_toBottomOf="@+id/tvCallOutComeNote"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvCallOutComeNote"
                            style="@style/Superfone.Button.IconOnly"/>
                        <androidx.core.widget.NestedScrollView
                            android:id="@+id/scrollTranscript"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fillViewport="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvCallOutComeNote"
                            app:layout_constraintVertical_chainStyle="packed">
                            <com.google.android.material.textview.MaterialTextView
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:textColor="@color/superfone_blue"
                                android:gravity="start|top"
                                android:id="@+id/tvTranscript"
                                android:padding="@dimen/grid_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Start speaking…"
                                android:minLines="3"
                                android:animateLayoutChanges="true"/>
                        </androidx.core.widget.NestedScrollView>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tiLayoutNotes"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1"
