<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_streaming_voice_note_0"
    android:background="@android:color/white"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="20dp"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/micPulseWrapper"
            android:clipChildren="false"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <View
                android:id="@+id/micPulseRing"
                android:background="@drawable/bg_mic_pulse_ring"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imgMicPulse"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_microphone"
                app:tint="@color/superfone_purple"/>
        </FrameLayout>
        <ScrollView
            android:id="@+id/scrollTranscript"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/btnDone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/micPulseWrapper">
            <com.google.android.material.textview.MaterialTextView
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:id="@+id/tvTranscript"
                android:background="@drawable/bg_transcript_box"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start speaking..."
                android:lineSpacingExtra="4dp"/>
        </ScrollView>
        <Button
            android:textColor="@android:color/white"
            android:id="@+id/btnDone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Done"
            android:backgroundTint="@color/superfone_purple"
            app:cornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="1"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/recordingActionsLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/reDoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/grid_2"
                android:backgroundTint="@color/superfone_gray"
                app:icon="@drawable/ic_undo"
                app:iconTint="?attr/colorOnPrimary"
                style="@style/Superfone.Button.IconOnly"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/newLeadWhatsappButton"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WA"
                android:backgroundTint="@color/superfone_green"
                app:icon="@drawable/ic_whatsapp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/grid_2"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
