<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/standalone_deal_update_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/leadDetailsProfilePic"
                android:tag="binding_1"
                android:background="@color/superfone_gray_200"
                android:padding="@dimen/grid_0_5"
                android:layout_width="@dimen/grid_7"
                android:layout_height="@dimen/grid_7"
                android:layout_marginTop="@dimen/grid_1_5"
                android:scaleType="centerInside"
                android:layout_marginStart="@dimen/grid_1"
                android:elevation="@dimen/grid_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Superfone.RoundedImageView"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/contentCallDataParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_5"
                app:layout_constraintTop_toTopOf="@+id/leadDetailsProfilePic"
                style="@style/Superfone.BottomSheetCard">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:tag="binding_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/leadCallReminder"
                        android:padding="@dimen/grid_1_5"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_constraintDimensionRatio="H, 1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_time"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/leadDetailsClose"
                        android:padding="@dimen/grid_1_5"
                        android:layout_width="0dp"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_constraintDimensionRatio="H, 1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_cross"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                        android:gravity="center"
                        android:id="@+id/leadDetailsName"
                        android:tag="binding_3"
                        android:paddingTop="@dimen/grid_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_4"
                        android:layout_marginStart="@dimen/grid_1_5"
                        android:layout_marginEnd="@dimen/grid_1_5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/editContact"
                        android:layout_width="32dp"
                        android:layout_height="?attr/actionBarSize"
                        android:paddingStart="@dimen/grid_1"
                        app:layout_constraintDimensionRatio="H, 1:1"
                        app:layout_constraintStart_toEndOf="@+id/leadDetailsName"
                        app:layout_constraintTop_toTopOf="@+id/leadDetailsName"
                        app:srcCompat="@drawable/ic_edit"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:textAppearance="@style/TextAppearance.Superfone.Body3"
                        android:textColor="?attr/colorOnSurface"
                        android:gravity="center"
                        android:id="@+id/leadDetailsNumber"
                        android:tag="binding_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_0_5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/leadDetailsName"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:orientation="horizontal"
                        android:id="@+id/rvUserTags"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_1"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/leadDetailsNumber"
                        app:spanCount="1"/>
                    <View
                        android:id="@+id/leadDetailsBorder1"
                        android:background="@drawable/ic_bottom_border"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/grid_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rvUserTags"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                        android:gravity="center_vertical"
                        android:id="@+id/tvDealStageUpdateTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_1_5"
                        android:text="You can update the deal stage and/or when next follow-up needs to be done"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/leadDetailsBorder1"
                        app:layout_constraintVertical_chainStyle="packed"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:orientation="horizontal"
                        android:id="@+id/rvDealStage"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvDealStageUpdateTitle"
                        app:spanCount="1"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:textAppearance="@style/TextAppearance.Superfone.Headline6"
                        android:textColor="@color/superfone_green"
                        android:id="@+id/tvTaskCompletionImpact"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="�� Congratulations!!! Looks like you are winning this deal"
                        android:layout_marginStart="@dimen/grid_1"
                        android:layout_marginEnd="@dimen/grid_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rvDealStage"/>
                    <include
                        android:id="@+id/custom_form"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTaskCompletionImpact"
                        layout="@layout/content_custom_form"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/callOutcomeWhenNoTask"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/custom_form">
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                            android:gravity="center_vertical"
                            android:id="@+id/tvCallOutComeNextTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1_5"
                            android:text="Next Followup On?"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                            android:textColor="@color/superfone_blue"
                            android:gravity="center_vertical"
                            android:id="@+id/tvCallOutComeNextAssignee"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1_5"
                            android:text="Tasker : You"
                            app:layout_constraintEnd_toStartOf="@+id/nextStepTaskerDelete"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/nextStepTaskerDelete"
                            android:layout_width="@dimen/grid_4"
                            android:layout_height="@dimen/grid_4"
                            app:icon="@drawable/ic_cross"
                            app:layout_constraintBottom_toBottomOf="@+id/tvCallOutComeNextAssignee"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvCallOutComeNextAssignee"
                            style="@style/Superfone.Button.IconOnly"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="@style/TextAppearance.Superfone.Headline6"
                            android:textColor="@color/superfone_red"
                            android:id="@+id/tvNextStepMandatoryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1"
                            android:layout_marginBottom="@dimen/grid_1"
                            android:text="A future follow up date must be set"
                            android:layout_marginStart="@dimen/grid_1"
                            android:layout_marginEnd="@dimen/grid_1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvCallOutComeNextTitle"/>
                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:gravity="center"
                            android:id="@+id/toggleGroupDueDateSelection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvNextStepMandatoryText"
                            app:selectionRequired="true"
                            app:singleSelection="true">
                            <Button
                                android:textSize="9sp"
                                android:id="@+id/btnLaterToday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:text="Today"
                                style="@style/Widget.Material3.Button.TextButton"/>
                            <Button
                                android:textSize="9sp"
                                android:id="@+id/btnTomorrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:text="Tomorrow"
                                style="@style/Widget.Material3.Button.TextButton"/>
                            <Button
                                android:textSize="9sp"
                                android:id="@+id/btnLaterThisWeek"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:text="This Week"
                                style="@style/Widget.Material3.Button.TextButton"/>
                            <Button
                                android:textSize="9sp"
                                android:id="@+id/btnNextWeek"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:text="Next Week"
                                style="@style/Widget.Material3.Button.TextButton"/>
                            <Button
                                android:textSize="9sp"
                                android:id="@+id/btnCustomDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:text="Select"
                                style="@style/Widget.Material3.Button.TextButton"/>
                        </com.google.android.material.button.MaterialButtonToggleGroup>
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                            android:gravity="center_vertical"
                            android:id="@+id/tvCallOutComeNote"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1_5"
                            android:text="@string/note"
                            app:layout_constraintEnd_toStartOf="@+id/tvNoteAddSpeech"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/toggleGroupDueDateSelection"
                            app:layout_constraintVertical_chainStyle="packed"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tvNoteAddSpeech"
                            android:padding="@dimen/grid_0_5"
                            android:visibility="visible"
                            android:layout_width="@dimen/grid_4"
                            android:layout_height="@dimen/grid_4"
                            app:icon="@drawable/ic_microphone"
                            app:layout_constraintBottom_toBottomOf="@+id/tvCallOutComeNote"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvCallOutComeNote"
                            style="@style/Superfone.Button.IconOnly"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tiLayoutNotes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1"
                            android:hint="@string/start_type_here"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvCallOutComeNote"
                            app:layout_constraintVertical_chainStyle="packed"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:gravity="top"
                                android:id="@+id/tiEditTextNotes"
                                android:tag="binding_5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minLines="3"
                                android:inputType="textNoSuggestions"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/sendMessageLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tiLayoutNotes"
                            app:layout_constraintVertical_chainStyle="packed">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/leadWhatsapp"
                                android:layout_width="@dimen/grid_4"
                                android:layout_height="@dimen/grid_4"
                                app:backgroundTint="@android:color/holo_green_dark"
                                app:icon="@drawable/ic_whatsapp"
                                app:iconTint="?attr/colorOnPrimary"
                                style="@style/Superfone.Button.IconOnly"/>
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/leadMessage"
                                android:layout_width="@dimen/grid_4"
                                android:layout_height="@dimen/grid_4"
                                android:layout_marginStart="@dimen/grid_2"
                                app:backgroundTint="@android:color/holo_blue_dark"
                                app:icon="@drawable/ic_comment"
                                app:iconTint="?attr/colorOnPrimary"
                                style="@style/Superfone.Button.IconOnly"/>
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/leadMail"
                                android:layout_width="@dimen/grid_4"
                                android:layout_height="@dimen/grid_4"
                                android:layout_marginStart="@dimen/grid_2"
                                android:layout_marginEnd="@dimen/grid_2"
                                app:backgroundTint="@android:color/holo_orange_dark"
                                app:icon="@drawable/ic_email"
                                app:iconTint="?attr/colorOnPrimary"
                                style="@style/Superfone.Button.IconOnly"/>
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/sendTemplateAction"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:outlineProvider="none"
                                app:cardBackgroundColor="@color/backgroundAssigned"
                                app:cardCornerRadius="@dimen/grid_3">
                                <com.google.android.material.textview.MaterialTextView
                                    android:textAppearance="@style/TextAppearance.Superfone.Body2"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:id="@+id/sendTemplateTitle"
                                    android:padding="@dimen/grid_0_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/send_template"/>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/callOutcome_ActionButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_1"
                            android:text="@string/save"
                            android:textAllCaps="false"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/sendMessageLayout"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
