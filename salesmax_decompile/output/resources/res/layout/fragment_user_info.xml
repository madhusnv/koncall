<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_user_info_0"
    android:background="?attr/colorLightBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <com.google.android.material.card.MaterialCardView
        android:tag="binding_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorLightBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/grid_1"
        app:cardMaxElevation="@dimen/grid_1">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/grid_2"
            android:paddingBottom="@dimen/grid_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/grid_2"
            android:paddingEnd="@dimen/grid_2">
            <com.google.android.material.textview.MaterialTextView
                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                android:textColor="@color/superfone_blue"
                android:padding="@dimen/grid_0_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1_5"
                android:text="@string/basic_info"/>
            <ai.salesmax.view.ViewProfileData
                android:tag="binding_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1_5"
                app:superfone_profile_data_icon="@drawable/ic_designation"
                app:superfone_profile_data_title="Designation"/>
            <ai.salesmax.view.ViewProfileData
                android:tag="binding_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:superfone_profile_data_icon="@drawable/ic_star"
                app:superfone_profile_data_title="Authorization"/>
            <ai.salesmax.view.ViewProfileData
                android:tag="binding_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:superfone_profile_data_icon="@drawable/ic_call"
                app:superfone_profile_data_title="Primary Number"/>
            <ai.salesmax.view.ViewProfileData
                android:tag="binding_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:superfone_profile_data_icon="@drawable/ic_call"
                app:superfone_profile_data_title="Secondary Number"/>
            <ai.salesmax.view.ViewProfileData
                android:tag="binding_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:superfone_profile_data_icon="@drawable/ic_email"
                app:superfone_profile_data_title="Email Address"/>
            <ai.salesmax.view.ViewProfileData
                android:tag="binding_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:superfone_profile_data_icon="@drawable/ic_detail_icon"
                app:superfone_profile_data_title="Account Membership Status"/>
            <com.google.android.material.textview.MaterialTextView
                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                android:textColor="@color/superfone_blue"
                android:padding="@dimen/grid_0_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_2"
                android:text="@string/team_memberships"/>
            <androidx.recyclerview.widget.RecyclerView
                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                android:orientation="vertical"
                android:id="@+id/listMemberships"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1"
                android:nestedScrollingEnabled="false"
                app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
                app:spanCount="1"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.core.widget.NestedScrollView>
