<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/viewSaveCRMGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.45"/>
    <com.google.android.material.textview.MaterialTextView
        android:textAppearance="@style/TextAppearance.Superfone.Body2"
        android:textColor="?attr/colorOnSurface"
        android:id="@+id/viewSaveCRMTitle"
        android:paddingTop="@dimen/grid_1_5"
        android:paddingBottom="@dimen/grid_1_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/save_to_crm"
        android:textAllCaps="false"
        android:layout_marginStart="@dimen/grid_1_5"
        app:layout_constraintEnd_toEndOf="@+id/viewSaveCRMGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.SwitchCompat
        android:textAppearance="@style/TextAppearance.Superfone.Body2"
        android:id="@+id/viewSaveCRMValue"
        android:background="@android:color/transparent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_marginEnd="@dimen/grid_1_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/viewSaveCRMGuideline"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/viewSaveCRMBorder1"
        android:background="@drawable/ic_bottom_border"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
