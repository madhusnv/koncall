<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/leads_fragment_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_5">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:contentInsetStart="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="enterAlways|scroll">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/leadsAppBar"
                android:background="?attr/colorSurface"
                android:paddingLeft="@dimen/grid_2"
                android:paddingTop="@dimen/grid_1_5"
                android:paddingRight="@dimen/grid_2"
                android:paddingBottom="@dimen/grid_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/grid_2">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/leadsMenu"
                    android:tag="binding_1"
                    android:padding="@dimen/grid_1_5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="H, 1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/searchLeadsEditTextLayout"
                    android:tag="binding_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?attr/colorPrimary"
                    app:boxCornerRadiusBottomEnd="24dp"
                    app:boxCornerRadiusBottomStart="24dp"
                    app:boxCornerRadiusTopEnd="24dp"
                    app:boxCornerRadiusTopStart="24dp"
                    app:endIconDrawable="@drawable/ic_microphone"
                    app:endIconMode="custom"
                    app:hintEnabled="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/frame_container"
                    app:layout_constraintStart_toEndOf="@+id/leadsMenu"
                    app:layout_constraintTop_toTopOf="parent"
                    app:startIconDrawable="0x7f080458"
                    style="@style/Superfone.Input.WithoutLine">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textAppearance="@style/TextAppearance.Superfone.Body1"
                        android:id="@+id/searchLeadsEditText"
                        android:background="@drawable/board_selected"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Search..."
                        android:maxLines="1"
                        android:inputType="textNoSuggestions"
                        android:imeOptions="actionDone"/>
                </com.google.android.material.textfield.TextInputLayout>
                <FrameLayout
                    android:id="@+id/frame_container"
                    android:background="@null"
                    android:padding="@dimen/grid_1"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/grid_1"
                    android:layout_marginEnd="@dimen/grid_1"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="H, 1:1"
                    app:layout_constraintEnd_toStartOf="@+id/leadsPlus"
                    app:layout_constraintTop_toTopOf="parent">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/leadsFilter"
                        android:tag="binding_3"
                        android:padding="@dimen/grid_0_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_filter"/>
                    <TextView
                        android:textColor="?attr/colorOnPrimary"
                        android:gravity="center"
                        android:layout_gravity="end|top"
                        android:id="@+id/leadsFilter_badge"
                        android:background="@drawable/badge_background"
                        android:padding="3dp"
                        android:visibility="invisible"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/grid_0_5"
                        android:layout_marginEnd="@dimen/grid_0_5"/>
                </FrameLayout>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/leadsPlus"
                    android:tag="binding_4"
                    android:padding="@dimen/grid_1_5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="H, 1:1"
                    app:layout_constraintEnd_toStartOf="@+id/leadsMore"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_plus"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/leadsMore"
                    android:tag="binding_5"
                    android:padding="@dimen/grid_1_5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="H, 1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_more"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/leadsTab"
            android:tag="binding_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/appBar"
            app:materialThemeOverlay="@style/ThemeOverlay.Superfone.ElevationOverlayDisabled"
            app:tabIndicator="@drawable/ic_tab_indicator"
            app:tabIndicatorFullWidth="false"
            app:tabMode="auto"
            app:tabPaddingEnd="@dimen/grid_4"
            app:tabPaddingStart="@dimen/grid_4"
            app:tabTextAppearance="@style/TextAppearance.Superfone.Subtitle1Bold"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/leadsSelectionAction"
            android:tag="binding_7"
            android:background="?attr/colorSecondary"
            android:padding="@dimen/grid_0_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabLayoutParent">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/deselectAll"
                android:tag="binding_8"
                android:padding="@dimen/grid_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/superfone_white"
                app:srcCompat="@drawable/ic_back_arrow"/>
            <com.google.android.material.textview.MaterialTextView
                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                android:textColor="@color/white"
                android:gravity="start"
                android:layout_gravity="center_vertical"
                android:id="@+id/leadSelectionTitle"
                android:tag="binding_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/leads"
                android:maxLines="1"
                android:layout_weight="1"/>
            <com.google.android.material.button.MaterialButton
                android:layout_gravity="center_vertical"
                android:id="@+id/addTagTemplate"
                android:tag="binding_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_tag"
                app:iconTint="?attr/colorOnPrimary"
                style="@style/Superfone.Button.IconOnly"/>
            <com.google.android.material.button.MaterialButton
                android:layout_gravity="center_vertical"
                android:id="@+id/sendMultipleTemplate"
                android:tag="binding_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_comment"
                app:iconTint="?attr/colorOnPrimary"
                style="@style/Superfone.Button.IconOnly"/>
            <com.google.android.material.button.MaterialButton
                android:layout_gravity="center_vertical"
                android:id="@+id/assigneeProfilePic"
                android:tag="binding_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_user_add"
                app:iconTint="?attr/colorOnPrimary"
                style="@style/Superfone.Button.IconOnly"/>
            <com.google.android.material.button.MaterialButton
                android:layout_gravity="center_vertical"
                android:id="@+id/deletePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_delete_engagement"
                app:iconTint="?attr/colorOnPrimary"
                style="@style/Superfone.Button.IconOnly"/>
            <com.google.android.material.button.MaterialButton
                android:layout_gravity="center_vertical"
                android:id="@+id/closePic"
                android:tag="binding_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_stop"
                app:iconTint="?attr/colorOnPrimary"
                style="@style/Superfone.Button.IconOnly"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.viewpager2.widget.ViewPager2
            android:orientation="horizontal"
            android:id="@+id/leadsPager"
            android:tag="binding_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/leadsTab"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_gravity="end|bottom"
        android:id="@+id/fabAutoDialer"
        android:tag="binding_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_2"
        android:layout_marginBottom="@dimen/grid_6"
        android:src="@drawable/ic_auto_dial"
        android:contentDescription="@string/add"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_marginEnd="@dimen/grid_2"
        android:backgroundTint="?attr/colorPrimary"
        app:borderWidth="0dp"
        app:layout_anchorGravity="end|bottom"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        app:tint="?attr/colorOnPrimary"
        style="?attr/floatingActionButtonSmallStyle"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_gravity="end|bottom"
        android:id="@+id/fabDialer"
        android:tag="binding_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_2"
        android:src="@drawable/ic_dialer"
        android:contentDescription="@string/add"
        android:backgroundTint="?attr/colorPrimary"
        app:borderWidth="0dp"
        app:layout_anchorGravity="end|bottom"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        app:tint="?attr/colorOnPrimary"
        style="?attr/floatingActionButtonSmallStyle"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
