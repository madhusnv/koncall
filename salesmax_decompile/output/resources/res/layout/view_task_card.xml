<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/view_task_card_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/grid_1"
        app:cardBackgroundColor="#2fb8b0"
        app:cardCornerRadius="@dimen/grid_2"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:layout_constraintDimensionRatio="V, 4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="?attr/colorOnPrimary"
                android:gravity="center"
                android:id="@+id/newData"
                android:background="@drawable/badge_background"
                android:padding="3dp"
                android:visibility="gone"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="@dimen/grid_3"
                android:alpha="0.8"
                android:layout_marginEnd="@dimen/grid_3"
                android:backgroundTint="@color/superfone_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.85">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/itemIcon"
                    android:layout_width="@dimen/grid_3"
                    android:layout_height="@dimen/grid_3"
                    android:layout_marginTop="@dimen/grid_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/superfone_white"/>
                <com.google.android.material.textview.MaterialTextView
                    android:textAppearance="@style/TextAppearance.Superfone.Headline3"
                    android:textColor="?attr/colorOnPrimary"
                    android:gravity="center"
                    android:id="@+id/itemCount"
                    android:padding="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_1"
                    android:text="@string/_0"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.15"
                    app:layout_constraintStart_toEndOf="@+id/itemIcon"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:textAppearance="@style/TextAppearance.Superfone.Subtitle1Bold"
                    android:textColor="?attr/colorOnPrimary"
                    android:gravity="start"
                    android:id="@+id/itemName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/grid_2"
                    android:minLines="2"
                    android:breakStrategy="simple"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/itemCount"
                    app:layout_constraintTop_toBottomOf="@+id/itemCount"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <View
        android:id="@+id/shadowMarginView"
        android:layout_width="0dp"
        android:layout_height="@dimen/grid_1"
        android:layout_marginStart="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        app:layout_constraintEnd_toEndOf="@+id/itemCard"
        app:layout_constraintStart_toStartOf="@+id/itemCard"
        app:layout_constraintTop_toBottomOf="@+id/itemCard"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cardShadowView"
        android:background="#2fb8b0"
        android:layout_width="0dp"
        android:layout_height="@dimen/grid_4"
        android:alpha="0.2"
        android:layout_marginStart="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        app:layout_constraintBottom_toBottomOf="@+id/shadowMarginView"
        app:layout_constraintEnd_toEndOf="@+id/itemCard"
        app:layout_constraintStart_toStartOf="@+id/itemCard"
        app:shapeAppearance="@style/ShapeAppearance.Superfone.SmallComponent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
