<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/customize_template_wa_0"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Superfone.BottomSheetCard">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/topActionButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        app:backgroundTint="@color/superfone_gray_300"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/Widget.Superfone.TextButtonNoPadding"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                        android:textColor="?attr/colorOnSurface"
                        android:gravity="center"
                        android:id="@+id/tvTemplatesTitle"
                        android:visibility="visible"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/grid_1_5"
                        android:text="Prepare To Send Template"
                        app:layout_constraintEnd_toStartOf="@+id/buttonDone"
                        app:layout_constraintStart_toEndOf="@+id/buttonCancel"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonDone"
                        android:tag="binding_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/topActionButtons">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/uploadHeaderFileActionButtons"
                        android:tag="binding_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                            android:textColor="?attr/colorOnSurface"
                            android:id="@+id/tvHeaderTitle"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/grid_1_5"
                            android:text="Add Header Image"
                            android:layout_weight="1"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/taskAttachment"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/grid_4"
                            app:icon="@drawable/ic_file_upload"
                            style="@style/Superfone.Button.IconOnly.Transparent"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/taskPicture"
                            android:tag="binding_3"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/grid_4"
                            app:icon="@drawable/ic_camera"
                            style="@style/Superfone.Button.IconOnly.Transparent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/removeUploadedFileAction"
                        android:tag="binding_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/uploadHeaderFileActionButtons">
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                            android:textColor="?attr/colorOnSurface"
                            android:id="@+id/tvUploadedFileName"
                            android:tag="binding_5"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/grid_1_5"
                            android:layout_weight="1"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/revertFileButton"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/grid_4"
                            app:icon="@drawable/ic_file_undo"
                            style="@style/Superfone.Button.IconOnly.Transparent"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/removeUploadedFileButton"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/grid_4"
                            app:icon="@drawable/ic_search_close"
                            style="@style/Superfone.Button.IconOnly.Transparent"/>
                    </LinearLayout>
                    <com.google.android.material.textview.MaterialTextView
                        android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                        android:textColor="?attr/colorOnSurface"
                        android:id="@+id/tvVariableTitle"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/grid_1_5"
                        android:text="Set Template Variables"
                        android:layout_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/removeUploadedFileAction"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:orientation="vertical"
                        android:id="@+id/tvVariableList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_0_5"
                        app:icon="@drawable/ic_add_task_call"
                        app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvVariableTitle"
                        app:spanCount="1"/>
                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:textColor="?attr/colorOnSurface"
                        android:gravity="center_vertical"
                        android:id="@+id/saveTemplateVariables"
                        android:paddingTop="@dimen/grid_3"
                        android:paddingBottom="@dimen/grid_1"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save as default for future use"
                        app:layout_constraintTop_toBottomOf="@+id/tvVariableList"
                        style="@style/Widget.Superfone.TextButton"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/grid_0_5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/saveTemplateVariables">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/itemLeadRoot"
                            android:tag="binding_6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#d9fdd3"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_max="wrap"
                            app:layout_constraintWidth_percent="0.9">
                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/layoutMessageWithImage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/ivFileView"
                                    android:tag="binding_7"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="?attr/colorSurface"
                                    app:cardCornerRadius="@dimen/grid_1_5"
                                    app:cardElevation="0dp"
                                    app:cardMaxElevation="0dp"
                                    app:strokeColor="@color/backgroundTasks"
                                    app:strokeWidth="0.5dp">
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:tag="binding_8"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <RelativeLayout
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                            <com.google.android.material.imageview.ShapeableImageView
                                                android:id="@+id/ivFilePreview"
                                                android:tag="binding_9"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:scaleType="fitCenter"
                                                android:adjustViewBounds="true"
                                                app:shapeAppearanceOverlay="@style/RoundedSquareTopOnly"/>
                                            <com.google.android.material.imageview.ShapeableImageView
                                                android:id="@+id/ivPlayButton"
                                                android:tag="binding_10"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/grid_8"
                                                android:src="@drawable/ic_play_filled"
                                                android:scaleType="centerInside"
                                                android:adjustViewBounds="true"
                                                android:tint="@color/superfone_black_30"
                                                android:scaleX="2"
                                                android:scaleY="2"
                                                app:contentPaddingBottom="0dp"
                                                app:shapeAppearanceOverlay="@style/RoundedSquare"/>
                                        </RelativeLayout>
                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:id="@+id/ivFileDetail"
                                            android:tag="binding_11"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <com.google.android.material.card.MaterialCardView
                                                android:id="@+id/ivFileTypeIcon"
                                                android:tag="binding_12"
                                                android:layout_width="wrap_content"
                                                android:layout_height="@dimen/grid_4"
                                                android:layout_marginTop="@dimen/grid_1_5"
                                                android:layout_marginBottom="@dimen/grid_1_5"
                                                android:minWidth="@dimen/grid_4"
                                                app:cardBackgroundColor="@color/backgroundVisits20"
                                                app:cardCornerRadius="2dp"
                                                app:cardElevation="0dp"
                                                app:cardMaxElevation="0dp">
                                                <com.google.android.material.imageview.ShapeableImageView
                                                    android:layout_gravity="center"
                                                    android:id="@+id/ivFileTypeIconDrawable"
                                                    android:tag="binding_13"
                                                    android:layout_width="@dimen/grid_3"
                                                    android:layout_height="@dimen/grid_3"
                                                    android:src="@drawable/ic_file_open"
                                                    android:scaleType="centerInside"
                                                    android:adjustViewBounds="true"
                                                    android:tint="?attr/colorPrimary"
                                                    app:contentPaddingBottom="0dp"
                                                    app:shapeAppearanceOverlay="@style/RoundedSquare"/>
                                            </com.google.android.material.card.MaterialCardView>
                                            <com.google.android.material.textview.MaterialTextView
                                                android:textAppearance="@style/TextAppearance.Superfone.Body3"
                                                android:ellipsize="end"
                                                android:layout_gravity="center"
                                                android:id="@+id/ivFileNameText"
                                                android:tag="binding_14"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:maxLines="1"
                                                android:layout_weight="1"
                                                android:layout_marginStart="@dimen/grid_1"/>
                                            <ProgressBar
                                                android:textAppearance="@style/TextAppearance.Superfone.Body3"
                                                android:layout_gravity="center"
                                                android:tag="binding_15"
                                                android:layout_width="@dimen/grid_3"
                                                android:layout_height="@dimen/grid_3"
                                                android:layout_marginStart="@dimen/grid_1"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </com.google.android.material.card.MaterialCardView>
                                <View
                                    android:tag="binding_16"
                                    android:background="@drawable/ic_bottom_border"
                                    android:visibility="invisible"
                                    android:layout_width="@dimen/grid_10"
                                    android:layout_height="0.1dp"/>
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_gravity="center"
                                    android:id="@+id/ivPlaceHolderFileNeeded"
                                    android:tag="binding_17"
                                    android:background="@color/superfone_gray_200"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/grid_8"
                                    android:src="@drawable/ic_video"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"
                                    android:tint="@color/superfone_white"
                                    app:shapeAppearanceOverlay="@style/RoundedSquare"/>
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_gravity="center"
                                    android:id="@+id/ivContactProfilePic"
                                    android:tag="binding_18"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"
                                    app:shapeAppearanceOverlay="@style/RoundedSquare"/>
                                <com.google.android.material.textview.MaterialTextView
                                    android:textSize="14sp"
                                    android:textColor="@color/superfone_black"
                                    android:autoLink="web"
                                    android:id="@+id/textMessage"
                                    android:tag="binding_19"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"
                                    android:paddingBottom="@dimen/grid_0_5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <com.google.android.material.textview.MaterialTextView
                                    android:textSize="14sp"
                                    android:textColor="?attr/colorOnSurface"
                                    android:ellipsize="end"
                                    android:id="@+id/textQuotedMessage_hidden"
                                    android:tag="binding_20"
                                    android:padding="@dimen/grid_0_5"
                                    android:visibility="invisible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:maxLines="2"
                                    android:layout_marginEnd="@dimen/grid_3"
                                    android:layout_marginHorizontal="8dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="@+id/image_line"
                                    app:layout_constraintTop_toBottomOf="@+id/textQuotedMessageSentBy"/>
                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/textQuotedMessageSentBy_hidden"
                                    android:tag="binding_21"
                                    android:visibility="invisible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginEnd="@dimen/grid_3"
                                    android:layout_marginHorizontal="8dp"
                                    app:layout_constraintStart_toStartOf="@+id/image_line"
                                    app:layout_constraintTop_toBottomOf="@+id/textQuotedMessage_hidden"/>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:tag="binding_22"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:id="@+id/oneButtonContainer"
                                        android:tag="binding_23"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/grid_2"
                                        android:layout_marginEnd="@dimen/grid_2">
                                        <Button
                                            android:textSize="8sp"
                                            android:id="@+id/button1SingleButton"
                                            android:tag="binding_24"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            style="@style/Widget.Material3.Button.OutlinedButton"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:id="@+id/twoButtonsContainer"
                                        android:tag="binding_25"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/grid_2"
                                        android:layout_marginEnd="@dimen/grid_2">
                                        <Button
                                            android:textSize="8sp"
                                            android:id="@+id/button1TwoButtons"
                                            android:tag="binding_26"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginEnd="@dimen/grid_0_5"
                                            style="@style/Widget.Material3.Button.OutlinedButton"/>
                                        <Button
                                            android:textSize="8sp"
                                            android:id="@+id/button2TwoButtons"
                                            android:tag="binding_27"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginStart="@dimen/grid_0_5"
                                            style="@style/Widget.Material3.Button.OutlinedButton"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:id="@+id/threeButtonsContainer"
                                        android:tag="binding_28"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/grid_2"
                                        android:layout_marginEnd="@dimen/grid_2">
                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:id="@+id/threeButtonsContainerFirstPart"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <Button
                                                android:textSize="8sp"
                                                android:id="@+id/button1"
                                                android:tag="binding_29"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:layout_marginEnd="@dimen/grid_0_5"
                                                style="@style/Widget.Material3.Button.OutlinedButton"/>
                                            <Button
                                                android:textSize="8sp"
                                                android:id="@+id/button2"
                                                android:tag="binding_30"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:layout_marginStart="@dimen/grid_0_5"
                                                style="@style/Widget.Material3.Button.OutlinedButton"/>
                                        </LinearLayout>
                                        <Button
                                            android:textSize="8sp"
                                            android:id="@+id/button3"
                                            android:tag="binding_31"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            style="@style/Widget.Material3.Button.OutlinedButton"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/sendMessageActionButton"
                            android:tag="binding_32"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/grid_2"
                            android:text="Send Template"
                            android:textAllCaps="false"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/itemLeadRoot"
                            app:layout_constraintWidth_percent="0.9"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
