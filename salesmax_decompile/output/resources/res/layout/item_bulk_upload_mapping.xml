<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLeadRoot"
    android:tag="layout/item_bulk_upload_mapping_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="@dimen/grid_1_5"
        android:paddingBottom="@dimen/grid_1_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgDragHandler"
            android:visibility="gone"
            android:layout_width="@dimen/grid_4"
            android:layout_height="@dimen/grid_4"
            android:src="@drawable/ic_baseline_drag_indicator_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="@style/TextAppearance.Superfone.Headline5"
            android:id="@+id/tvSheetHeader"
            android:tag="binding_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_1"
            android:layout_marginEnd="@dimen/grid_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgDragHandler"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="@style/TextAppearance.Superfone.Headline5"
            android:id="@+id/tvSampleItem"
            android:tag="binding_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_1"
            android:layout_marginEnd="@dimen/grid_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgDragHandler"
            app:layout_constraintTop_toBottomOf="@+id/tvSheetHeader"
            app:layout_constraintVertical_chainStyle="packed"/>
        <HorizontalScrollView
            android:id="@+id/mappedFieldSelection"
            android:scrollbars="none"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSampleItem">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/availableFieldsGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:singleSelection="true">
                <com.google.android.material.chip.Chip
                    android:textSize="10sp"
                    android:id="@+id/chipFollowUp"
                    android:tag="binding_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/follow_up"
                    style="@style/Widget.Superfone.ChipStroke"/>
                <com.google.android.material.chip.Chip
                    android:textSize="10sp"
                    android:id="@+id/chipSendProposal"
                    android:tag="binding_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_proposal"
                    style="@style/Widget.Superfone.ChipStroke"/>
                <com.google.android.material.chip.Chip
                    android:textSize="10sp"
                    android:id="@+id/chipDemo"
                    android:tag="binding_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demo"
                    style="@style/Widget.Superfone.ChipStroke"/>
                <com.google.android.material.chip.Chip
                    android:textSize="10sp"
                    android:id="@+id/chipSendDocument"
                    android:tag="binding_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_document"
                    style="@style/Widget.Superfone.ChipStroke"/>
                <com.google.android.material.chip.Chip
                    android:textSize="10sp"
                    android:id="@+id/chipGetDocument"
                    android:tag="binding_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_document"
                    style="@style/Widget.Superfone.ChipStroke"/>
                <com.google.android.material.chip.Chip
                    android:textSize="10sp"
                    android:id="@+id/chipGetAppointment"
                    android:tag="binding_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_appointment"
                    style="@style/Widget.Superfone.ChipStroke"/>
                <com.google.android.material.chip.Chip
                    android:textSize="10sp"
                    android:id="@+id/chipInPersonMeeting"
                    android:tag="binding_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/in_person_meeting"
                    style="@style/Widget.Superfone.ChipStroke"/>
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
