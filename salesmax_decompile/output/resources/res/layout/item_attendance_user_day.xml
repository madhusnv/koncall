<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/item_attendance_user_day_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemLeadRoot"
        android:tag="binding_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        app:materialThemeOverlay="@style/ThemeOverlay.Superfone.ElevationOverlayDisabled"
        style="?attr/materialCardViewElevatedStyle">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingTop="@dimen/grid_1_5"
                android:paddingBottom="@dimen/grid_1_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/grid_1"
                android:paddingEnd="@dimen/grid_1">
                <FrameLayout
                    android:id="@+id/frame_container"
                    android:layout_width="@dimen/grid_5"
                    android:layout_height="@dimen/grid_5"
                    android:layout_marginStart="@dimen/grid_1"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layout_constraintDimensionRatio="H, 1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivContactProfilePic"
                        android:tag="binding_2"
                        android:background="@color/superfone_gray_200"
                        android:padding="@dimen/grid_0_5"
                        android:layout_width="@dimen/grid_5"
                        android:layout_height="@dimen/grid_5"
                        android:scaleType="centerInside"
                        app:layout_constraintDimensionRatio="H, 1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textColor="?attr/colorOnPrimary"
                        android:gravity="center"
                        android:layout_gravity="end|top"
                        android:id="@+id/activityFilter_badge"
                        android:background="@drawable/badge_background"
                        android:padding="3dp"
                        android:visibility="gone"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="@dimen/grid_0_5"
                        android:alpha="0.5"
                        android:layout_marginEnd="@dimen/grid_0_5"/>
                </FrameLayout>
                <com.google.android.material.textview.MaterialTextView
                    android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                    android:id="@+id/tvContactName"
                    android:tag="binding_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/grid_1"
                    android:layout_marginEnd="@dimen/grid_2"
                    app:layout_constraintEnd_toStartOf="@+id/tvAttendanceMarkedAt"
                    app:layout_constraintStart_toEndOf="@+id/frame_container"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <com.google.android.material.chip.Chip
                    android:textAppearance="@style/TextAppearance.Superfone.Subtitle2"
                    android:textColor="?attr/colorOnPrimary"
                    android:id="@+id/tvAttendanceMarkedAt"
                    android:tag="binding_4"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/grid_1"
                    android:layout_marginEnd="@dimen/grid_1"
                    app:chipIconSize="@dimen/grid_2"
                    app:ensureMinTouchTargetSize="false"
                    app:iconEndPadding="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textEndPadding="0dp"
                    app:textStartPadding="2dp"/>
                <com.google.android.material.chip.Chip
                    android:textAppearance="@style/TextAppearance.Superfone.Subtitle2"
                    android:textColor="?attr/colorOnPrimary"
                    android:id="@+id/tvAttendanceMarkedOutAt"
                    android:tag="binding_5"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/grid_0_5"
                    android:layout_marginStart="@dimen/grid_1"
                    android:layout_marginEnd="@dimen/grid_1"
                    app:chipIconSize="@dimen/grid_2"
                    app:ensureMinTouchTargetSize="false"
                    app:iconEndPadding="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAttendanceMarkedAt"
                    app:textEndPadding="0dp"
                    app:textStartPadding="2dp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:textAppearance="@style/TextAppearance.Superfone.Body3"
                    android:textColor="?attr/colorOnSurface"
                    android:id="@+id/tvAbsenceReason"
                    android:tag="binding_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_0_5"
                    android:layout_marginStart="@dimen/grid_1"
                    app:layout_constraintEnd_toEndOf="@+id/tvContactName"
                    app:layout_constraintStart_toEndOf="@+id/frame_container"
                    app:layout_constraintTop_toBottomOf="@+id/tvContactName"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_gravity="center"
                    android:id="@+id/ivTemplateImage"
                    android:tag="binding_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frame_container"
                    app:shapeAppearanceOverlay="@style/RoundedSquare"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
