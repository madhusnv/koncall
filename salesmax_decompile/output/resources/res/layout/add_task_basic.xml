<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/add_task_basic_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                app:backgroundTint="@color/superfone_gray_300"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.Superfone.TextButtonNoPadding"/>
            <com.google.android.material.button.MaterialButton
                android:textColor="?attr/colorOnPrimary"
                android:id="@+id/buttonDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                app:backgroundTint="?attr/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.Superfone.TextButtonNoPadding"/>
            <com.google.android.material.textview.MaterialTextView
                android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                android:textColor="?attr/colorOnSurface"
                android:id="@+id/tvLifecycleMessage"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonCancel"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/addTaskParent"
                android:tag="binding_1"
                android:paddingTop="@dimen/grid_0_5"
                android:paddingBottom="@dimen/grid_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLifecycleMessage"
                app:layout_constraintVertical_bias="0">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/grid_0_5"
                    android:paddingStart="@dimen/grid_2"
                    android:paddingEnd="@dimen/grid_2"
                    android:layout_marginEnd="@dimen/grid_1"
                    app:endIconMode="custom"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:startIconDrawable="0x7f080458"
                    style="@style/Superfone.Input.WithoutLine">
                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:textColor="?attr/colorOnSurface"
                        android:id="@+id/mAutoComplete"
                        android:background="@drawable/board_selected"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/search_by_name"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textNoSuggestions"
                        android:imeOptions="actionDone"
                        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"/>
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/mClose"
                    android:visibility="gone"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_search_close"
                    android:paddingEnd="@dimen/grid_2"
                    app:layout_constraintBottom_toBottomOf="@+id/layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/layout"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="horizontal"
                    android:id="@+id/rvNextStepTaskType"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout"
                    app:spanCount="1"/>
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:gravity="center"
                    android:id="@+id/toggleGroupDueDateSelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvNextStepTaskType"
                    app:selectionRequired="true"
                    app:singleSelection="true">
                    <Button
                        android:textSize="9sp"
                        android:id="@+id/btnLaterToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="Today"
                        style="@style/Widget.Material3.Button.TextButton"/>
                    <Button
                        android:textSize="9sp"
                        android:id="@+id/btnTomorrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="Tomorrow"
                        style="@style/Widget.Material3.Button.TextButton"/>
                    <Button
                        android:textSize="9sp"
                        android:id="@+id/btnLaterThisWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="This Week"
                        style="@style/Widget.Material3.Button.TextButton"/>
                    <Button
                        android:textSize="9sp"
                        android:id="@+id/btnNextWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="Next Week"
                        style="@style/Widget.Material3.Button.TextButton"/>
                    <Button
                        android:textSize="9sp"
                        android:id="@+id/btnCustomDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="Select"
                        style="@style/Widget.Material3.Button.TextButton"/>
                </com.google.android.material.button.MaterialButtonToggleGroup>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/taskBasicHeadLineLayout"
                    android:background="@drawable/ic_bottom_border"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_1"
                    app:endIconDrawable="@drawable/ic_microphone"
                    app:endIconMode="custom"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toggleGroupDueDateSelection"
                    style="@style/Superfone.Input.WithoutLine">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                        android:textStyle="bold"
                        android:id="@+id/taskBasicHeadLine"
                        android:tag="binding_2"
                        android:background="@android:color/transparent"
                        android:paddingTop="@dimen/grid_1"
                        android:paddingBottom="@dimen/grid_1_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/heading_of_the_task"
                        android:maxLines="1"
                        android:inputType="textNoSuggestions"
                        android:imeOptions="actionNext"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        style="@style/Superfone.Input.WithoutBox"/>
                </com.google.android.material.textfield.TextInputLayout>
                <include
                    android:id="@+id/custom_form"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/taskBasicHeadLineLayout"
                    layout="@layout/content_custom_form"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/taskBasicDescriptionLayout"
                    android:background="@color/superfone_white"
                    android:paddingTop="@dimen/grid_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_1"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    app:endIconDrawable="@drawable/ic_microphone"
                    app:endIconMode="custom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/custom_form"
                    style="@style/Superfone.Input.WithoutBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                        android:scrollbarStyle="insideInset"
                        android:textStyle="bold"
                        android:gravity="top"
                        android:id="@+id/taskBasicDescription"
                        android:tag="binding_3"
                        android:padding="@dimen/grid_1"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/grid_8"
                        android:hint="@string/task_description"
                        android:singleLine="false"
                        android:inputType="textMultiLine"
                        android:imeOptions="actionDone"
                        android:overScrollMode="always"
                        android:paddingStart="0dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/taskAssigneeProfilePic"
                    android:tag="binding_4"
                    android:background="@color/superfone_gray_200"
                    android:visibility="gone"
                    android:layout_width="@dimen/grid_5"
                    android:layout_height="@dimen/grid_5"
                    android:layout_marginTop="@dimen/grid_1_5"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/taskBasicDescriptionLayout"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Superfone.RoundedImageView"/>
                <com.google.android.material.textview.MaterialTextView
                    android:textAppearance="@style/TextAppearance.Superfone.Headline5"
                    android:id="@+id/taskAssigneeName"
                    android:tag="binding_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_1"
                    android:layout_marginStart="@dimen/grid_2"
                    android:layout_marginEnd="@dimen/grid_2"
                    app:layout_constraintEnd_toStartOf="@+id/taskCall"
                    app:layout_constraintStart_toEndOf="@+id/taskAssigneeProfilePic"
                    app:layout_constraintTop_toTopOf="@+id/taskAssigneeProfilePic"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:gravity="start|center_vertical"
                    android:id="@+id/taskCall"
                    android:tag="binding_6"
                    android:layout_width="@dimen/grid_4"
                    android:layout_height="@dimen/grid_4"
                    android:layout_marginTop="@dimen/grid_0_5"
                    android:layout_marginStart="@dimen/grid_2"
                    android:layout_marginEnd="@dimen/grid_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/taskAssigneeProfilePic"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Superfone.RoundedImageView"
                    app:srcCompat="@drawable/ic_round_call"/>
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipPriorityGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_4"
                    android:layout_marginStart="@dimen/grid_2"
                    android:layout_marginEnd="@dimen/grid_2"
                    app:chipSpacingHorizontal="@dimen/grid_1"
                    app:chipSpacingVertical="@dimen/grid_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/taskAssigneeProfilePic"
                    app:singleLine="false"
                    app:singleSelection="false">
                    <com.google.android.material.chip.Chip
                        android:textAppearance="@style/TextAppearance.Superfone.Subtitle2"
                        android:id="@+id/taskPriority"
                        android:tag="binding_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipIcon="@drawable/ic_add_task_priority"
                        app:chipIconSize="@dimen/grid_2"
                        app:ensureMinTouchTargetSize="false"
                        app:iconStartPadding="@dimen/grid_0_5"/>
                    <com.google.android.material.chip.Chip
                        android:textAppearance="@style/TextAppearance.Superfone.Subtitle2"
                        android:id="@+id/taskTag"
                        android:tag="binding_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipIcon="@drawable/ic_add_task_tag"
                        app:chipIconSize="@dimen/grid_2"
                        app:ensureMinTouchTargetSize="false"
                        app:iconStartPadding="@dimen/grid_0_5"/>
                    <com.google.android.material.chip.Chip
                        android:textAppearance="@style/TextAppearance.Superfone.Subtitle2"
                        android:id="@+id/taskDate"
                        android:tag="binding_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipIcon="@drawable/ic_add_task_calender"
                        app:chipIconSize="@dimen/grid_2"
                        app:ensureMinTouchTargetSize="false"
                        app:iconStartPadding="@dimen/grid_0_5"/>
                    <com.google.android.material.chip.Chip
                        android:textAppearance="@style/TextAppearance.Superfone.Subtitle2"
                        android:id="@+id/taskTimer"
                        android:tag="binding_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipIcon="@drawable/ic_add_task_timer"
                        app:chipIconSize="@dimen/grid_2"
                        app:ensureMinTouchTargetSize="false"
                        app:iconStartPadding="@dimen/grid_0_5"/>
                    <com.google.android.material.chip.Chip
                        android:textAppearance="@style/TextAppearance.Superfone.Subtitle2"
                        android:id="@+id/taskReminder"
                        android:tag="binding_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipIcon="@drawable/ic_add_task_reminder"
                        app:chipIconSize="@dimen/grid_2"
                        app:ensureMinTouchTargetSize="false"
                        app:iconStartPadding="@dimen/grid_0_5"/>
                    <com.google.android.material.chip.Chip
                        android:textAppearance="@style/TextAppearance.Superfone.Subtitle2"
                        android:id="@+id/taskLocation"
                        android:tag="binding_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipIcon="@drawable/ic_add_task_location"
                        app:chipIconSize="@dimen/grid_2"
                        app:ensureMinTouchTargetSize="false"
                        app:iconStartPadding="@dimen/grid_0_5"/>
                </com.google.android.material.chip.ChipGroup>
                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="horizontal"
                    android:id="@+id/taskFileList"
                    android:tag="binding_13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_0_5"
                    android:layout_marginStart="@dimen/grid_2"
                    android:layout_marginEnd="@dimen/grid_2"
                    app:icon="@drawable/ic_add_task_call"
                    app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chipPriorityGroup"
                    app:spanCount="1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
