<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/item_document_uploaded_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/grid_0_5">
    <com.google.android.material.textview.MaterialTextView
        android:textAppearance="@style/TextAppearance.Superfone.Body5"
        android:autoLink="web"
        android:id="@+id/wabaTemplateName"
        android:tag="binding_1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="@dimen/grid_0_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_0_5"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.chip.Chip
        android:textAppearance="@style/TextAppearance.Superfone.Subtitle1"
        android:textSize="11sp"
        android:id="@+id/chipDataCategory"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/grid_0_5"
        android:checked="true"
        android:layout_marginStart="@dimen/grid_1"
        app:chipIcon="@drawable/ic_tag"
        app:chipIconSize="@dimen/grid_1"
        app:chipIconTint="@color/superfone_red"
        app:ensureMinTouchTargetSize="false"
        app:layout_constraintStart_toStartOf="@+id/wabaTemplateName"
        app:layout_constraintTop_toBottomOf="@+id/wabaTemplateName"
        app:textEndPadding="@dimen/grid_0_5"
        app:textStartPadding="@dimen/grid_0_5"/>
    <com.google.android.material.chip.Chip
        android:textAppearance="@style/TextAppearance.Superfone.Subtitle1"
        android:textSize="11sp"
        android:id="@+id/chipDataSubCategory"
        android:tag="binding_3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/grid_0_5"
        android:checked="true"
        android:layout_marginStart="@dimen/grid_1"
        app:chipIcon="@drawable/ic_tag"
        app:chipIconSize="@dimen/grid_1"
        app:chipIconTint="@color/superfone_red"
        app:ensureMinTouchTargetSize="false"
        app:layout_constraintStart_toEndOf="@+id/chipDataCategory"
        app:layout_constraintTop_toBottomOf="@+id/wabaTemplateName"
        app:textEndPadding="@dimen/grid_0_5"
        app:textStartPadding="@dimen/grid_0_5"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/itemLeadRoot"
        android:tag="binding_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_1_5"
        android:layout_marginStart="@dimen/grid_5"
        android:layout_marginEnd="@dimen/grid_5"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipDataCategory"
        app:layout_constraintWidth_max="wrap">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layoutMessageWithImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ivFileView"
                android:tag="binding_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="@dimen/grid_1_5"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:strokeColor="@color/backgroundTasks"
                app:strokeWidth="0.5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:tag="binding_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/ivFileDetail"
                        android:tag="binding_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/ivFileTypeIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/grid_4"
                            android:layout_marginTop="@dimen/grid_1_5"
                            android:layout_marginBottom="@dimen/grid_1_5"
                            android:minWidth="@dimen/grid_4"
                            app:cardBackgroundColor="@color/backgroundVisits20"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">
                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_gravity="center"
                                android:id="@+id/ivFileTypeIconDrawable"
                                android:tag="binding_8"
                                android:layout_width="@dimen/grid_3"
                                android:layout_height="@dimen/grid_3"
                                android:src="@drawable/ic_file_open"
                                android:scaleType="centerInside"
                                android:adjustViewBounds="true"
                                android:tint="?attr/colorPrimary"
                                app:contentPaddingBottom="0dp"
                                app:shapeAppearanceOverlay="@style/RoundedSquare"/>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="@style/TextAppearance.Superfone.Body3"
                            android:ellipsize="end"
                            android:layout_gravity="center"
                            android:id="@+id/ivFileNameText"
                            android:tag="binding_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/grid_1"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_gravity="center"
                android:id="@+id/ivContactProfilePic"
                android:tag="binding_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/grid_15"
                app:shapeAppearanceOverlay="@style/RoundedSquare"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/layoutMessageWithAudio"
            android:tag="binding_11"
            android:padding="8dp"
            android:layout_width="@dimen/grid_10"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnPlayPause"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play"/>
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxHeight="4dp"
                android:progressDrawable="@drawable/seekbar_progress"
                android:minHeight="4dp"
                android:thumb="@drawable/seekbar_thumb"
                android:layout_weight="1"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:paddingStart="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <HorizontalScrollView
        android:id="@+id/actionGroup"
        android:scrollbars="none"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemLeadRoot">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fileWhatsapp"
                android:tag="binding_12"
                android:layout_width="@dimen/grid_4"
                android:layout_height="@dimen/grid_4"
                app:backgroundTint="@color/backgroundVisits"
                app:icon="@drawable/ic_share"
                app:iconTint="?attr/colorOnPrimary"
                app:layout_constraintEnd_toStartOf="@+id/fileEmail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Superfone.Button.IconOnly"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fileEmail"
                android:tag="binding_13"
                android:visibility="gone"
                android:layout_width="@dimen/grid_4"
                android:layout_height="@dimen/grid_4"
                android:layout_marginStart="@dimen/grid_4"
                app:backgroundTint="@android:color/holo_purple"
                app:icon="@drawable/ic_email"
                app:iconTint="?attr/colorOnPrimary"
                app:layout_constraintEnd_toStartOf="@+id/fileEdit"
                app:layout_constraintStart_toEndOf="@+id/fileWhatsapp"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Superfone.Button.IconOnly"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fileEdit"
                android:tag="binding_14"
                android:visibility="gone"
                android:layout_width="@dimen/grid_4"
                android:layout_height="@dimen/grid_4"
                android:layout_marginStart="@dimen/grid_4"
                app:backgroundTint="@android:color/holo_blue_dark"
                app:icon="@drawable/ic_edit"
                app:iconTint="?attr/colorOnPrimary"
                app:layout_constraintEnd_toStartOf="@+id/fileDownload"
                app:layout_constraintStart_toEndOf="@+id/fileEmail"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Superfone.Button.IconOnly"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fileDownload"
                android:tag="binding_15"
                android:layout_width="@dimen/grid_4"
                android:layout_height="@dimen/grid_4"
                android:layout_marginStart="@dimen/grid_4"
                app:backgroundTint="@android:color/darker_gray"
                app:icon="@drawable/ic_download"
                app:iconTint="?attr/colorOnPrimary"
                app:layout_constraintEnd_toStartOf="@+id/fileDelete"
                app:layout_constraintStart_toEndOf="@+id/fileEdit"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Superfone.Button.IconOnly"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fileDelete"
                android:tag="binding_16"
                android:layout_width="@dimen/grid_4"
                android:layout_height="@dimen/grid_4"
                android:layout_marginStart="@dimen/grid_4"
                app:backgroundTint="@color/superfone_red_70"
                app:icon="@drawable/ic_delete_engagement"
                app:iconTint="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fileDownload"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Superfone.Button.IconOnly"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>
    <View
        android:background="@drawable/ic_bottom_border"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/grid_1"
        android:layout_marginBottom="@dimen/grid_1"
        app:layout_constraintTop_toBottomOf="@+id/actionGroup"/>
</androidx.constraintlayout.widget.ConstraintLayout>
