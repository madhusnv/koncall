<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/add_task_assign_people_0"
    android:paddingBottom="@dimen/grid_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:backgroundTint="@color/superfone_gray_300"
        app:icon="@drawable/ic_back_arrow"
        app:iconTint="@color/superfone_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.Superfone.TextButtonNoPadding"/>
    <com.google.android.material.textview.MaterialTextView
        android:textAppearance="@style/TextAppearance.Superfone.Headline5"
        android:id="@+id/taskAssignPeopleTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/assign_people"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_marginEnd="@dimen/grid_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/taskAssignSearchField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_1"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="@+id/taskAssignPeopleTitle"
        app:layout_constraintStart_toStartOf="@+id/taskAssignPeopleTitle"
        app:layout_constraintTop_toBottomOf="@+id/taskAssignPeopleTitle"
        style="@style/Widget.Superfone.SearchTwo">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/taskAssignSearchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search"
            android:maxLines="1"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionDone"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="vertical"
        android:id="@+id/taskAssigneeList"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_marginTop="@dimen/grid_1"
        app:hintEnabled="false"
        app:layoutManager="ai.salesmax.view.WrapContentLinearLayoutManager"
        app:layout_constraintEnd_toEndOf="@+id/taskAssignPeopleTitle"
        app:layout_constraintStart_toStartOf="@+id/taskAssignPeopleTitle"
        app:layout_constraintTop_toBottomOf="@+id/taskAssignSearchField"
        app:spanCount="1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
